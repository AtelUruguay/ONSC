<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="onsc_legajo_form" model="ir.ui.view">
            <field name="name">onsc.legajo.form</field>
            <field name="model">onsc.legajo</field>
            <field name="inherit_id" ref="onsc_legajo.onsc_legajo_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="button_open_cv2validate" class="oe_stat_button" icon="fa-book" type="object">
                        <div class="o_stat_info">
                            <span class="o_stat_text">
                                Validación de CV
                            </span>
                        </div>
                    </button>
                </div>
                <field name="employee_id" position="after">
                    <field name="cv_digital_id"/>
                </field>
                <xpath expr="//notebook" position="inside">
                    <page name="formation" string="Formación personal">
                        <div>
                            <h4>Formación básica</h4>
                        </div>
                        <field name="basic_formation_ids"/>
                        <br/>
                        <div>
                            <h4>Formación avanzada</h4>
                        </div>
                        <field name="advanced_formation_ids"/>
                    </page>
                    <page name="formation" string="Cursos y certificados">
                        <div>
                            <h4>Cursos, talleres y otras capacitaciones</h4>
                        </div>
                        <field name="course_ids"
                               context="{'tree_view_ref': 'onsc_cv_digital.onsc_cv_course_view_tree', 'default_record_type': 'course'}"/>
                        <br/>
                        <div>
                            <h4>Certificados</h4>
                        </div>
                        <field name="certificate_ids"
                               context="{'tree_view_ref': 'onsc_cv_digital.onsc_cv_certificate_view_tree', 'default_record_type': 'certificate'}"/>
                    </page>
                </xpath>
            </field>
    </record>
</odoo>
