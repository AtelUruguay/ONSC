<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_docket_causes_discharge_views_search" model="ir.ui.view">
        <field name="name">onsc.docket.causes.discharge.views.search</field>
        <field name="model">onsc.docket.causes.discharge</field>
        <field name="arch" type="xml">
            <search string="Causales de Egreso">
                <field name="name"/>
                <field name="code"/>
                <field name="code_bps"/>
                <field name="description_bps"/>
                <field name="code_cgn"/>
                <field name="description_cgn"/>
                <field name="code_rve"/>
                <field name="description_rve"/>
            </search>
        </field>
    </record>

    <record id="onsc_docket_causes_discharge_views_tree" model="ir.ui.view">
        <field name="name">onsc.docket.causes.discharge.views.tree</field>
        <field name="model">onsc.docket.causes.discharge</field>
        <field name="arch" type="xml">
            <tree string="Causales de Egreso">
                <field name="name"/>
                <field name="code"/>
                <field name="code_bps"/>
                <field name="description_bps"/>
                <field name="code_cgn"/>
                <field name="description_cgn"/>
                <field name="code_rve"/>
                <field name="description_rve"/>
                <field name="is_by_inciso"/>
                <field name="inciso_id"/>
                <field name="is_require_extended"/>

            </tree>
        </field>
    </record>
    <record id="onsc_docket_causes_discharge_views_form" model="ir.ui.view">
        <field name="name">onsc.docket.causes.discharge.views.form</field>
        <field name="model">onsc.docket.causes.discharge</field>
        <field name="arch" type="xml">
            <form string="Causales de Egreso">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="code_bps"/>
                            <field name="description_bps"/>
                            <field name="code_cgn"/>
                            <field name="description_cgn"/>
                        </group>
                        <group>
                            <field name="code_rve"/>
                            <field name="description_rve"/>
                            <field name="is_by_inciso"/>
                            <field name="inciso_id"/>
                            <field name="is_require_extended"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Motivos de Causal de egreso extendido"
                              attrs="{'invisible': [('is_require_extended', '!=', True)]}">
                            <field name="causes_discharge_line_ids"
                                   nolabel="1">
                                <tree string="Motivo de causal de egreso extendido" editable="top">
                                    <field name="name"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='onsc_docket_causes_discharge_action' model='ir.actions.act_window'>
        <field name="name">Causales de Egreso</field>
        <field name="res_model">onsc.docket.causes.discharge</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nuevo causal de egreso
            </p>
        </field>
    </record>
</odoo>