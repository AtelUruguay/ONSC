<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_docket_commission_regime_view_tree" model="ir.ui.view">
        <field name="name">onsc.docket.commission.regime.tree</field>
        <field name="model">onsc.docket.commission.regime</field>
        <field name="arch" type="xml">
            <tree string="Régimen de la comisión">
                <field name="name"/>
                <field name="code"/>
                <field name="cgn_code" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                <field name="start_date" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                <field name="end_date" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                <field name="date_change" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="onsc_docket_commission_regime_view_form" model="ir.ui.view">
        <field name="name">onsc.docket.commission.regime.form</field>
        <field name="model">onsc.docket.commission.regime</field>
        <field name="arch" type="xml">
            <form string="Régimen de la comisión">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="cgn_code" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                            <field name="start_date" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                            <field name="end_date" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                            <field name="date_change" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="onsc_docket_commission_regime_view_search" model="ir.ui.view">
        <field name="name">onsc.docket.commission.regime.search</field>
        <field name="model">onsc.docket.commission.regime</field>
        <field name="arch" type="xml">
            <search string="Régimen de la comisión">
                <field name="name"/>
                <field name="code"/>
                <field name="cgn_code"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="date_change"/>
            </search>
        </field>
    </record>
    <record id="onsc_docket_commission_regime_action" model="ir.actions.act_window">
        <field name="name">Régimen de la comisión</field>
        <field name="res_model">onsc.docket.commission.regime</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo régimen de la comisión
            </p>
        </field>
    </record>
</odoo>