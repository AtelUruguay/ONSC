<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_docket_integration_error_view_tree" model="ir.ui.view">
        <field name="name">onsc.docket.integration.error.tree</field>
        <field name="model">onsc.docket.integration.error</field>
        <field name="arch" type="xml">
            <tree string="Errores de integración">
                <field name="integration_code"/>
                <field name="code_error"/>
                <field name="description"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="onsc_docket_integration_error_view_form" model="ir.ui.view">
        <field name="name">onsc.docket.integration.error.form</field>
        <field name="model">onsc.docket.integration.error</field>
        <field name="arch" type="xml">
            <form string="Errores de integración">
                <sheet>
                    <group>
                        <group>
                            <field name="integration_code"/>
                            <field name="code_error"/>
                            <field name="description"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="onsc_docket_integration_error_view_search" model="ir.ui.view">
        <field name="name">onsc.docket.integration.error.search</field>
        <field name="model">onsc.docket.integration.error</field>
        <field name="arch" type="xml">
            <search string="Errores de integración">
                <field name="integration_code"/>
                <field name="code_error"/>
                <field name="description"/>
            </search>
        </field>
    </record>
    <record id="onsc_docket_integration_error_action" model="ir.actions.act_window">
        <field name="name">Errores de integración</field>
        <field name="res_model">onsc.docket.integration.error</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo error de integración
            </p>
        </field>
    </record>
</odoo>