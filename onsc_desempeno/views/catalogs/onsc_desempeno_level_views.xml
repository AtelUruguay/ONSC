<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="onsc_desempeno_level_tree" model="ir.ui.view">
        <field name="name">onsc.desempeno.level.tree</field>
        <field name="model">onsc.desempeno.level</field>
        <field name="arch" type="xml">
            <tree string="Niveles">
                <field name="name"/>
                <field name="definition"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="onsc_desempeno_level_form" model="ir.ui.view">
        <field name="name">onsc.desempeno.level.form</field>
        <field name="model">onsc.desempeno.level</field>
        <field name="arch" type="xml">
            <form string="Niveles">
                <header/>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="definition"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_onsc_catalog_occupation_form_inherit" model="ir.ui.view">
        <field name="name">onsc_catalog_occupation_form.inherit</field>
        <field name="model">onsc.catalog.occupation</field>
        <field name="inherit_id" ref="onsc_catalog.onsc_catalog_occupation_form"/>
        <field name="arch" type="xml">
            <field name="approve_cgn_date" position="after">
               <field name="level_id" required="1"/>
            </field>
        </field>
    </record>
    <record id='onsc_desempeno_level_action' model='ir.actions.act_window'>
        <field name="name">Niveles</field>
        <field name="res_model">onsc.desempeno.level</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo nivel
            </p>
        </field>
    </record>
</odoo>
