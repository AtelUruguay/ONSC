<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_desempeno_reason_change_evaluator_search" model="ir.ui.view">
        <field name="name">onsc.desempeno.reason_change_evaluator.search</field>
        <field name="model">onsc.desempeno.reason_change_evaluator</field>
        <field name="arch" type="xml">
            <search string="Motivos de cambio de evaluador">
                <field name="name"/>
                <field name="agree"/>
            </search>
        </field>
    </record>
    <record id="onsc_desempeno_reason_change_evaluator_tree" model="ir.ui.view">
        <field name="name">onsc.desempeno.reason_change_evaluator.tree</field>
        <field name="model">onsc.desempeno.reason_change_evaluator</field>
        <field name="arch" type="xml">
            <tree string="Motivos de cambio de evaluador">
                <field name="name"/>
                <field name="agree"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="onsc_desempeno_reason_change_evaluator_form" model="ir.ui.view">
        <field name="name">onsc.desempeno.reason_change_evaluator.form</field>
        <field name="model">onsc.desempeno.reason_change_evaluator</field>
        <field name="arch" type="xml">
            <form string="Motivos de cambio de evaluador">
                <header/>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="agree"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id='onsc_desempeno_reason_change_evaluator_action' model='ir.actions.act_window'>
        <field name="name">Motivos de cambio de evaluador</field>
        <field name="res_model">onsc.desempeno.reason_change_evaluator</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un motivo de cambio de evaluador
            </p>
        </field>
    </record>
</odoo>
