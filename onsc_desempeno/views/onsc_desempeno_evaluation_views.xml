<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_desempeno_evaluation_search" model="ir.ui.view">
        <field name="name">onsc.desempeno.evaluation.search</field>
        <field name="model">onsc.desempeno.evaluation</field>
        <field name="arch" type="xml">
            <search string="Evaluación de Desempeño">
                <field name="evaluation_type"/>
                <field name="general_cycle_id"/>
                <field name="evaluator_id"/>
                <field name="evaluated_id"/>
                <field name="original_evaluator_id"/>
                <field name="occupation_id"/>
            </search>
        </field>
    </record>
    <record id="onsc_desempeno_evaluation_tree" model="ir.ui.view">
        <field name="name">onsc.desempeno.evaluation.tree</field>
        <field name="model">onsc.desempeno.evaluation</field>
        <field name="arch" type="xml">
            <tree string="Evaluación de Desempeño">
                <field name="evaluation_type"/>
                <field name="general_cycle_id"/>
                <field name="evaluator_id"/>
                <field name="evaluated_id"/>
                <field name="evaluation_start_date"/>
                <field name="evaluation_end_date"/>
                <field name="environment_definition_end_date"
                       attrs="{'invisible': [('evaluation_type', '!=', 'environment_definition')]}"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="onsc_desempeno_evaluation_form" model="ir.ui.view">
        <field name="name">onsc.desempeno.evaluation.form</field>
        <field name="model">onsc.desempeno.evaluation</field>
        <field name="arch" type="xml">
            <form string="Evaluación de Desempeño" create="0" delete="0" duplicate="0">
                <header>
                     <field name="evaluation_form_edit" invisible="1"/>
                    <button type="object" class="btn btn-primary"
                            string=" Comenzar Evaluación"
                            attrs="{'invisible': ['|',('state', '!=', 'draft'),('evaluation_form_edit', '=', False)]}"
                            name="button_start_evaluation"/>
                    <button type="object" class="btn btn-primary"
                            string=" Completar evaluación"
                            attrs="{'invisible': ['|',('state', '!=', 'in_process'),('evaluation_form_edit', '=', False)]}"
                            name="button_completed_evaluation"
                            confirm="¿Está seguro de que desea dar por completado el formulario?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,in_process,completed,finished,uncompleted,canceled"/>
                </header>
                <sheet>
                    <field name="should_disable_form_edit" invisible="1"/>
                    <field name="is_evaluation_form_active" invisible="1"/>
                    <field name="is_environment_evaluation_form_active" invisible="1"/>
                    <field name="change_evaluator" width="25%" invisible="1"/>

                    <group >
                        <group  style="min-width: 100px !important;" >

                            <label for="evaluation_type" style="min-width: 100px !important;">Tipo</label>
                            <field name="evaluation_type" nolabel="1" style="margin-bottom: 5px!important; min-width: 100px !important;"/>
                            <field name="inciso_id" style="margin-bottom: 5px!important; min-width: 100px !important;"
                                   options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"/>
                            <field name="uo_id" style="margin-bottom: 5px!important; min-width: 100px !important;"
                                   options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"/>
                            <field name="operating_unit_id" style="margin-bottom: 5px!important; min-width: 100px !important;"
                                   options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"/>
                            <field name="level_id" style="margin-bottom: 5px!important; min-width: 100px !important;"
                                   options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"/>
                            <field name="occupation_id" style="margin-bottom: 5px!important; min-width: 100px !important;"
                                   options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"/>
                        </group>
                        <group >
                            <field name="evaluated_id"
                                   options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"/>
                            <field name="evaluator_id"
                                   options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   attrs="{'invisible': [('evaluation_type', 'in',['self_evaluation', 'environment_definition'])]}"/>
                            <field name="original_evaluator_id"
                                   options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   attrs="{'invisible': ['|',('change_evaluator', '=', True),('evaluation_type', 'in',['self_evaluation'])]}"/>
                            <field name="year"/>
                            <field name="evaluation_start_date"/>
                            <field name="evaluation_end_date"/>
                            <field name="environment_definition_end_date"
                                   attrs="{'invisible': [('evaluation_type', '!=', 'environment_definition')]}"/>
                        </group>
                    </group>

                    <group name="entorno">
                        <field name="environment_ids" string="Entorno"
                               attrs="{'readonly': [('state', '!=', 'environment_definition')],'invisible': [('evaluation_type', '!=', 'environment_definition')]}"
                               widget="many2many_tags"
                               options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"/>
                        <field name="environment_evaluation_ids" string="Evaluación de entorno"
                               attrs="{'invisible': [('evaluation_type', '!=', 'environment_definition')]}"
                               widget="many2many_tags"
                               options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"/>
                    </group>
                     <div class="alert alert-info" role="alert"
                         name="div_alert_form"
                         style="overflow:hidden;"
                         attrs="{'invisible':['|',('is_evaluation_form_active', '=', False),('evaluation_type', '=', 'environment_definition')]}">
                        <div class="oe_left">
                            <p class="mb-0">
                                <strong>
                                    <field name="evaluation_form_text"/>
                                </strong>
                                <newline/>
                            </p>
                        </div>
                    </div>
                    <div class="alert alert-info" role="alert"
                         name="div_alert_env_form"
                         style="overflow:hidden;"
                         attrs="{'invisible': ['|',('is_environment_evaluation_form_active', '=', False),('evaluation_type', '!=', 'environment_definition')]}">
                        <div class="oe_left">
                            <p class="mb-0">
                                <strong>
                                    <field name="environment_evaluation_text"/>
                                </strong>
                                <newline/>
                            </p>
                        </div>
                    </div>
                    <notebook>
                        <page string="Evaluación de Competencias" attrs="{'invisible': [('evaluation_type', '=', 'environment_definition')],'readonly':[('locked', '=', True)]}">
                            <field name="evaluation_competency_ids" nolabel="1" attrs="{'readonly':[('locked', '=', True)]}">
                                <tree nolabel="1"  create="0" edit="0" >
                                    <field name="state"  invisible="1"/>
                                    <field name="evaluation_form_edit" invisible="1" />
                                    <field name="evaluation_id"  invisible="1"/>
                                    <field name="skill_id" options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true, 'no_edit':true}"/>
                                    <field name="degree_id" readonly="1" options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true, 'no_edit':true}"/>
                                    <field name="improvement_areas" readonly="1"  options="{'no_create':true,'no_create_edit':true, 'no_quick_create':true, 'no_open':true, 'no_edit':true}"/>
                                    <button type="object"
                                            name="button_open_current_skill"
                                            attrs="{'invisible': ['|',('state', '!=','in_process'),('evaluation_form_edit', '=',False)]}"
                                            context="{'form_view_ref': 'onsc_desempeno.onsc_desempeno_evaluation_competency_form'}"
                                            icon="fa-edit"/>
                                </tree>

                            </field>
                        </page>
                    </notebook>

                    <group name="general_comments" string="Comentarios Generales"
                           attrs="{'invisible': [('evaluation_type','in', ['environment_definition'])],'readonly':[('locked', '=', True)]}">
                        <field name="general_comments" nolabel="1"
                               placeholder="Comentarios Generales"/>
                    </group>
                    <group name="block">
                        <field name="locked" string="Bloqueado"
                               attrs="{'invisible': [('evaluation_type', 'not in',  ['collaborator', 'environment_evaluation'])],}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id='onsc_desempeno_evaluation_action' model='ir.actions.act_window'>
        <field name="name">Evaluación de Desempeño</field>
        <field name="res_model">onsc.desempeno.evaluation</field>
        <field name="context">{'is_from_menu': True}</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Evaluación de desempeño
            </p>
        </field>
    </record>

</odoo>
