        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_ids" eval="[(5, 0, 0),
               (0, 0, {'view_mode': 'form', 'view_id': ref('onsc_legajo.onsc_legajo_syncronize_ws7_wizard_form')})]"/>
    </record>
