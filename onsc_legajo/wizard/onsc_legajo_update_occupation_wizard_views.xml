<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="onsc_legajo_update_occupation_wizard_form" model="ir.ui.view">
        <field name="name">onsc.legajo.update.occupation.wizard.form</field>
        <field name="model">onsc.legajo.update.occupation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="date"/>
                    <field name="occupation_id" options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"/>
                </group>
                <footer>
                    <button string="Actualizar" name="action_update_occupation" type="object" class="oe_highlight" data-hotkey="a"/>
                    <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
