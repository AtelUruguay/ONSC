<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="onsc_legajo_hr_employee_tree" model="ir.ui.view">
            <field name="name">onsc.legajo.hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="Empleados">
                    <field name="full_name"/>
                    <field name="photo_updated_date" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                    <field name="emissor_country_id" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                    <field name="document_type_id" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                    <field name="nro_doc" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                    <field name="identity_document_expiration_date_doc"
                           groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                    <field name="birthdate" groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                </tree>
            </field>
        </record>
        <record id="onsc_legajo_hr_employee_form" model="ir.ui.view">
            <field name="name">onsc.legajo.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Empleados">
                    <header/>
                    <sheet>
                        <field name="photo_file" widget='image' class="oe_avatar"
                               options='{"preview_image": "avatar_128"}'/>
                        <div class="oe_title">
                            <h1>
                                <field name="full_name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="first_name" required="1"/>
                                <field name="second_name" required="1"/>
                                <field name="first_surname" required="1"/>
                                <field name="second_surname" required="1"/>
                                <field name="emissor_country_id" required="1"
                                       groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                                <field name="document_type_id" required="1"
                                       groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                                <field name="nro_doc" required="1"
                                       groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                                <field name="identity_document_expiration_date_doc" required="1"
                                       groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                                <field name="document_identity_file"
                                       filename="document_identity_filename"
                                       options="{'accepted_file_extensions': '.pdf'}"
                                       groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                            </group>
                            <field name="document_identity_filename" invisible="1"
                                   groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                            <group>
                                <field name="birthdate" required="1"
                                       groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                                <field name="photo_updated_date" required="1"
                                       groups="onsc_catalog.group_catalog_configurador_servicio_civil"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
        <record id='onsc_legajo_hr_employee_action' model='ir.actions.act_window'>
            <field name="name">Empleados</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo empleado
                </p>
            </field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('onsc_legajo.onsc_legajo_hr_employee_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('onsc_legajo.onsc_legajo_hr_employee_form')})]"/>
        </record>

    </data>
</odoo>