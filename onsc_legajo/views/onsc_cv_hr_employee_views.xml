<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="onsc_hr_employee_tree" model="ir.ui.view">
            <field name="name">onsc.hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="Empleados">
                    <field name="first_name"/>
                    <field name="second_name"/>
                    <field name="first_surname"/>
                    <field name="second_surname"/>
                    <field name="photo_date"/>
                    <field name="emissor_country_id"/>
                    <field name="document_type_id"/>
                    <field name="nro_doc"/>
                    <field name="identity_document_expiration_date_doc"/>
                    <field name="birthdate"/>
                </tree>
            </field>
        </record>
        <record id="onsc_hr_employee_form" model="ir.ui.view">
            <field name="name">onsc.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Empleados">
                    <header/>
                    <sheet>
                        <group>
                            <group>
                                <field name="first_name"/>
                                <field name="second_name"/>
                                <field name="first_surname"/>
                                <field name="second_surname"/>
                                <field name="photo_date"/>
                                <field name="emissor_country_id"/>
                                <field name="document_type_id"/>
                                <field name="nro_doc"/>
                                <field name="identity_document_expiration_date_doc"/>
                                <field name="birthdate"/>
                            </group>
                            <group/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id='onsc_hr_employee_action' model='ir.actions.act_window'>
            <field name="name">Empleados</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo empleado
                </p>
            </field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('onsc_legajo.onsc_hr_employee_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('onsc_legajo.onsc_hr_employee_form')})]"/>
        </record>

    </data>
</odoo>