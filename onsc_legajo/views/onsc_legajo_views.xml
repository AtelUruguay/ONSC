<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

    <record model="ir.ui.view" id="kanban_onsc_legajo">
        <field name="name">onsc.legajo.kanban</field>
        <field name="model">onsc.legajo</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban" create="0">
                <field name="id"/>
                <field name="full_name"/>
                <field name="nro_doc"/>
                <field name="emissor_country_id"/>
                <field name="avatar_128"/>
                <field name="contracts_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <div class="o_kanban_image_fill_left o_kanban_image_full"
                                 t-attf-style="background-image: url(#{kanban_image('onsc.legajo', 'avatar_128', record.id.raw_value)})"
                                 role="img"/>
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="full_name"/>
                                </strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul>
                                    <li t-if="record.emissor_country_id.raw_value" class="o_text_overflow">
                                        <t>
                                            <field name="emissor_country_id"/>
                                        </t>
                                    </li>
                                    <li t-if="record.nro_doc" class="o_text_overflow">
                                        <t>
                                            <field name="nro_doc"/>
                                        </t>
                                    </li>
                                    <li>
                                        <t>
                                            Contratos: <field name="contracts_count"/>
                                        </t>
                                    </li>
                                </ul>
                                <div class="o_row">
                                    <span class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="onsc_legajo_tree" model="ir.ui.view">
        <field name="name">onsc.legajo.tree</field>
        <field name="model">onsc.legajo</field>
        <field name="arch" type="xml">
            <tree string="Legajos">
                <field name="employee_id"/>
                <field name="emissor_country_id"/>
                <field name="document_type_id"/>
                <field name="nro_doc"/>
            </tree>
        </field>
    </record>

    <record id="onsc_legajo_form" model="ir.ui.view">
        <field name="name">onsc.legajo.form</field>
        <field name="model">onsc.legajo</field>
        <field name="arch" type="xml">
            <form string="Legajos">
                <header>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="button_open_employee" class="oe_stat_button" icon="fa-book" type="object">
                            <div class="o_stat_info">
                                <span class="o_stat_text">
                                    Datos personales
                                </span>
                            </div>
                        </button>
                        <button name="button_open_contract" class="oe_stat_button" icon="fa-book" type="object">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                   <field name="contracts_count"/>
                                </span>
                                <span class="o_stat_text">
                                    Informaci√≥n funcional
                                </span>
                            </div>
                        </button>
                    </div>
                    <field name="avatar_128" invisible="1"/>
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;avatar_128&quot;}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" required="1"/>
                            <field name="emissor_country_id"/>
                            <field name="document_type_id"/>
                            <field name="nro_doc"/>
                            <field name="public_admin_entry_date"/>
                            <field name="public_admin_inactivity_years_qty"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='onsc_legajo_action' model='ir.actions.act_window'>
        <field name="name">Legajos</field>
        <field name="res_model">onsc.legajo</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo legajo
            </p>
        </field>
    </record>
    </data>
</odoo>