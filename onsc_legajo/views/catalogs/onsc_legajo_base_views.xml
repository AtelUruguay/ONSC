<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_legajo_regime_search" model="ir.ui.view">
        <field name="name">onsc.legajo.regime.search</field>
        <field name="model">onsc.legajo.regime</field>
        <field name="arch" type="xml">
            <search string="Régimen">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="onsc_legajo_regime_tree" model="ir.ui.view">
        <field name="name">onsc.legajo.regime.tree</field>
        <field name="model">onsc.legajo.regime</field>
        <field name="arch" type="xml">
            <tree string="Régimen" editable="top">
                <field name="codigo" groups="onsc_legajo.group_legajo_configurador_integracion"/>
                <field name="descripcion" groups="onsc_legajo.group_legajo_configurador_integracion"/>
                <field name="name"/>
                <field name="ind_vencimiento" groups="onsc_legajo.group_legajo_configurador_integracion"/>
                <field name="presupuesto" groups="onsc_legajo.group_legajo_configurador_integracion"/>
                <field name="vigente" groups="onsc_legajo.group_legajo_configurador_integracion"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id='onsc_legajo_regime_action' model='ir.actions.act_window'>
        <field name="name">Régimen</field>
        <field name="res_model">onsc.legajo.regime</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo régimen
            </p>
        </field>
    </record>
</odoo>
