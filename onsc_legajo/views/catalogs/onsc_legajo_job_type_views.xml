<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_legajo_job_type_view_tree" model="ir.ui.view">
        <field name="name">onsc.legajo.job.type.tree</field>
        <field name="model">onsc.legajo.job.type</field>
        <field name="arch" type="xml">
            <tree string="Tipos de puestos">
                <field name="name"/>
                <field name="is_uo_manager" groups="onsc_legajo.group_legajo_configurador"/>
                <field name="role_ids" groups="onsc_legajo.group_legajo_configurador"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="onsc_legajo_job_type_view_form" model="ir.ui.view">
        <field name="name">onsc.legajo.job.type.form</field>
        <field name="model">onsc.legajo.job.type</field>
        <field name="arch" type="xml">
            <form string="Tipos de puestos">
                <sheet>
                    <group>
                        <group>
                            <field name="name" groups="onsc_legajo.group_legajo_configurador"/>
                            <field name="is_uo_manager"
                                   groups="onsc_legajo.group_legajo_configurador"/>
                            <field name="role_ids"
                                   options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"
                                   widget="many2many_tags" groups="onsc_legajo.group_legajo_configurador"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="onsc_legajo_job_type_view_search" model="ir.ui.view">
        <field name="name">onsc.legajo.job.type.search</field>
        <field name="model">onsc.legajo.job.type</field>
        <field name="arch" type="xml">
            <search string="Tipos de puestos">
                <field name="name"/>
                <field name="is_uo_manager"/>
                <field name="role_ids"/>
            </search>
        </field>
    </record>
    <record id="onsc_legajo_job_type_action" model="ir.actions.act_window">
        <field name="name">Tipos de puestos</field>
        <field name="res_model">onsc.legajo.job.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo tipo de puesto
            </p>
        </field>
    </record>
</odoo>
