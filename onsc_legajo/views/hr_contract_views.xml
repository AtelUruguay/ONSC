<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_legajo_hr_contract_view_form" model="ir.ui.view">
        <field name="name">hr.contract.form</field>
        <field name="model">hr.contract</field>
        <field name="arch" type="xml">
            <form string="Current Contract">
                <header>
                    <field name="legajo_state" widget="statusbar"
                           groups="onsc_legajo.group_legajo_configurador_contrato"/>
                </header>
                <sheet>
                    <div class="oe_title pr-0" name="title">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="employee_id"/>
                        </h1>
                        <h2>
                            <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                        </h2>
                    </div>
                    <group name="top_info">
                        <group name="top_info_left">
                            <field name="active" invisible="1"/>
                            <field name="name" invisible="1"/>
                            <field name="nro_doc" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="first_name" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="second_name" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="last_name_1" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="last_name_2" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="date_start" string="Fecha de alta"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="date_end" string="Fecha de baja"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="inciso_id"
                                   required="1"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="operating_unit_id" domain="operating_unit_id_domain"
                                   required="1"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="operating_unit_id_domain" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="wage" invisible="1"/>
                            <field name="income_mechanism_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>

                            <field name="call_number" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="cs_contract_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="program" groups="onsc_legajo.group_legajo_configurador_contrato" required="1"/>
                            <field name="project" groups="onsc_legajo.group_legajo_configurador_contrato" required="1"/>
                            <field name="regime_id" groups="onsc_legajo.group_legajo_configurador_contrato"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   required="1"/>
                            <field name="occupation_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_editar_ocupacion_contrato"/>
                            <field name="descriptor1_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="descriptor2_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="descriptor3_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="descriptor4_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="graduation_date" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="position" groups="onsc_legajo.group_legajo_configurador_contrato"
                                   required="1"/>
                            <field name="workplace" groups="onsc_legajo.group_legajo_configurador_contrato"
                                   required="1"/>
                            <field name="sec_position" groups="onsc_legajo.group_legajo_configurador_contrato"
                                   required="1"/>
                        </group>
                        <group>
                            <field name="reason_discharge" groups="onsc_legajo.group_legajo_configurador_contrato"
                                   required="1"/>
                            <field name="norm_code_discharge_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="norm_number_discharge"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="norm_year_discharge" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="norm_article_discharge"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="resolution_description_discharge"
                                   groups="onsc_legajo.group_legajo_configurador_contrato" required="1"/>
                            <field name="resolution_date_discharge"
                                   groups="onsc_legajo.group_legajo_configurador_contrato" required="1"/>
                            <field name="resolution_type_discharge"
                                   groups="onsc_legajo.group_legajo_configurador_contrato" required="1"/>
                            <field name="contract_expiration_date"
                                   groups="onsc_legajo.group_legajo_configurador_contrato" required="1"/>
                            <field name="additional_information_discharge"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="code_day" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="description_day" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="retributive_day_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="id_registration_discharge"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="id_deregistration_discharge"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="reason_deregistration"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="norm_code_deregistration_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="norm_number_deregistration"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="norm_year_deregistration"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="norm_article_deregistration"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="resolution_description_deregistration"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="resolution_date_deregistration"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="resolution_type_deregistration"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="causes_discharge_id"
                                   options="{'no_create_edit':true, 'no_quick_create':true, 'no_open':true}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="is_require_extended" invisible="1"/>
                            <field name="causes_discharge_extended"
                                   attrs="{'invisible': [('is_require_extended', '!=', True)]}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                            <field name="additional_information_deregistration"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documentos Adjuntos Alta" name="documents_alta">
                            <field name="attached_document_discharge_ids" nolabel="1"
                                   context="{'default_type': 'discharge'}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato">
                                <tree editable="top">
                                    <field name="name" required="1"/>
                                    <field name="document_type_id"/>
                                    <field name="document_file" required="1" filename="document_file_name"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="type" invisible="1"/>
                                    <field name="document_file_name" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documentos Adjuntos Baja" name="documents_baja">
                            <field name="attached_document_deregistration_ids" nolabel="1"
                                   context="{'default_type': 'deregistration'}"
                                   groups="onsc_legajo.group_legajo_configurador_contrato">
                                <tree editable="top">
                                    <field name="name" required="1"/>
                                    <field name="document_type_id"/>
                                    <field name="document_file" required="1" filename="document_file_name"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="type" invisible="1"/>
                                    <field name="document_file_name" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Puestos" name="puestos">
                            <field name="job_ids" nolabel="1" readonly="1"
                                   groups="onsc_legajo.group_legajo_configurador_contrato"
                                   context="{'form_view_ref' : 'onsc_legajo.onsc_legajo_hr_job_form_view'}">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id" string="Unidad organizativa"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="onsc_legajo_hr_contract_view_tree" model="ir.ui.view">
        <field name="name">hr.contract.tree</field>
        <field name="model">hr.contract</field>
        <field name="arch" type="xml">
            <tree string="Contracts" default_order='date_start ASC'>
                <field name="name"/>
                <field name="employee_id" widget="many2one_avatar_employee"/>
                <field name="job_ids" widget="many2many_tags"/>
                <field name="date_start" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                <field name="date_end" groups="onsc_legajo.group_legajo_configurador_contrato"/>
                <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                <field name="legajo_state" groups="onsc_legajo.group_legajo_configurador_contrato"/>
            </tree>
        </field>
    </record>

    <record id="onsc_legajo_hr_contract_action" model="ir.actions.act_window">
        <field name="name">Contratos</field>
        <field name="res_model">hr.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('onsc_legajo_hr_contract_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('onsc_legajo_hr_contract_view_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo contrato
            </p>
        </field>
    </record>
</odoo>