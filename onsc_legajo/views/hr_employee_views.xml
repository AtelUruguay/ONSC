<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="onsc_legajo_hr_employee_tree" model="ir.ui.view">
            <field name="name">onsc.legajo.hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="Empleados">
                    <field name="full_name"/>
                    <field name="photo_updated_date" groups="onsc_legajo.group_legajo_configurador_empleado"/>
                    <field name="cv_emissor_country_id" groups="onsc_legajo.group_legajo_configurador_empleado"/>
                    <field name="cv_document_type_id" groups="onsc_legajo.group_legajo_configurador_empleado"/>
                    <field name="cv_nro_doc" groups="onsc_legajo.group_legajo_configurador_empleado"/>
                    <field name="cv_expiration_date"
                           groups="onsc_legajo.group_legajo_configurador_empleado"/>
                    <field name="cv_birthdate" groups="onsc_legajo.group_legajo_configurador_empleado"/>
                </tree>
            </field>
        </record>

        <record id="onsc_legajo_hr_employee_form" model="ir.ui.view">
            <field name="name">onsc.legajo.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Empleados">
                    <header>
                    </header>
                    <sheet>
                        <field name="avatar_128" invisible="1"/>
                        <field name="image_1920" widget="image" class="oe_avatar"
                               options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;avatar_128&quot;}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="full_name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="cv_emissor_country_id" required="1"
                                       groups="onsc_legajo.group_legajo_configurador_empleado"/>
                                <field name="cv_document_type_id" required="1"
                                       groups="onsc_legajo.group_legajo_configurador_empleado"/>
                                <field name="cv_nro_doc" required="1"
                                       groups="onsc_legajo.group_legajo_configurador_empleado"/>
                                <field name="cv_expiration_date" readonly="1"
                                       groups="onsc_legajo.group_legajo_configurador_empleado"/>
                            </group>
                            <group>
                                <field name="cv_birthdate" readonly="1" groups="onsc_legajo.group_legajo_configurador_empleado"/>
                                <field name="photo_updated_date" readonly="1" groups="onsc_legajo.group_legajo_configurador_empleado"/>
                                <field name="cv_sex" readonly="1" groups="onsc_legajo.group_legajo_configurador_empleado"/>
                                <field name="cv_sex_updated_date" readonly="1" groups="onsc_legajo.group_legajo_configurador_empleado"/>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='onsc_legajo_hr_employee_action' model='ir.actions.act_window'>
            <field name="name">Empleados</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'is_legajo': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo empleado
                </p>
            </field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('onsc_legajo.onsc_legajo_hr_employee_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('onsc_legajo.onsc_legajo_hr_employee_form')})]"/>
        </record>
    </data>
</odoo>