<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_cv_certifying_institution_search" model="ir.ui.view">
        <field name="name">onsc.cv.certifying_institution.search</field>
        <field name="model">onsc.cv.certifying.institution</field>
        <field name="arch" type="xml">
            <search string="Instituciones certificadoras">
                <field name="name"/>
                <field name="code"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter name="filter_institution_id" string="instituci칩n" context="{'group_by':'institution_id'}"/>
                    <filter name="filter_state" string="Estado" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="onsc_cv_certifying_institution_tree" model="ir.ui.view">
        <field name="name">onsc.cv.certifying_institution.tree</field>
        <field name="model">onsc.cv.certifying.institution</field>
        <field name="arch" type="xml">
            <tree string="Instituciones certificadoras">
                <field name="name"/>
                <field name="code"/>
                <field name="institution_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="onsc_cv_certifying_institution_form" model="ir.ui.view">
        <field name="name">onsc.cv.certifying_institution.form</field>
        <field name="model">onsc.cv.certifying.institution</field>
        <field name="arch" type="xml">
            <form string="Instituciones certificadoras">
                <header>
                    <button name="action_validate" string="Validar"
                            class="oe_highlight"
                            states="to_validate" type="object"
                            groups="onsc_cv_digital.group_validador_catalogos_cv"
                            confirm="Est치 seguro que desea Validarlo"/>
                    <button name="action_reject" string="Rechazar"
                            states="to_validate" type="object"
                            groups="onsc_cv_digital.group_validador_catalogos_cv"
                            confirm="Est치 seguro que desea Rechazarlo"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>

                        </group>
                        <group>
                            <field name="institution_id"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="active" invisible="1"/>
                            <field name="reject_reason" states="rejected"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sub instituciones certificadoras">
                            <field name="subinstitution_cert_ids" context="{'from_institution': 1}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id='onsc_cv_certifying_institution_action' model='ir.actions.act_window'>
        <field name="name">Instituciones certificadoras</field>
        <field name="res_model">onsc.cv.certifying.institution</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'is_config': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva Instituci칩n certificadora
            </p>
        </field>
    </record>
</odoo>
