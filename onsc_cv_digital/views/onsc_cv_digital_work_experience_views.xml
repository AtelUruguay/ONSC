<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="onsc_cv_work_experience_form_view" model="ir.ui.view">
        <field name="name">onsc.cv.work.experience.form</field>
        <field name="model">onsc.cv.work.experience</field>
        <field name="arch" type="xml">
            <form string="Experiencias laborales">
                <sheet>
                    <div class="alert alert-danger" role="alert"
                         attrs="{'invisible': [('conditional_validation_state', '!=', 'rejected')]}">
                        <p class="mb-0">
                            <strong>
                                El registro ha sido rechazado por los siguientes motivos:
                                <field name="conditional_validation_reject_reason"/>
                            </strong>
                        </p>
                    </div>
                    <div class="alert alert-info" role="alert"
                         attrs="{'invisible': [('conditional_validation_state', '!=', 'to_validate')]}">
                        <p class="mb-0">
                            <strong>
                                El registro ingresado está en proceso de validación, se notificará el resultado de este
                                a su e-mail
                            </strong>
                        </p>
                    </div>
                    <group>
                        <group>
                            <field name="position"/>
                            <field name="country_id"  string="Pais donde desempeñó"/>
                            <field name="city_id" context="{'default_country_id': country_id, 'is_readonly': True}"/>
                            <field name="company_type"/>
                            <field name="country_code" invisible="1"/>
                            <field name="company_name"
                                   attrs="{'invisible': ['|',('country_code', '=', 'UY'),('company_type','=','public')],'required': [('country_code', '!=', 'UY'),('company_type','=','private')]}"/>
                            <field name="unit_name"/>
                            <field name="entry_institution_id"/>
                            <field name="hierarchical_level_id"/>
                            <field name="take_decisions"/>
                            <field name="is_paid_activity"/>
                        </group>
                        <group>
                            <field name="people_charge"/>
                            <field name="organizational_units_charge"/>
                            <field name="start_date"/>
                            <field name="currently_working"/>
                            <field name="end_date"/>
                            <field name="hours_worked_monthly"/>
                            <field name="description_tasks"/>
                            <field name="receipt_file"
                                   filename="receipt_filename"
                                   options="{'accepted_file_extensions': '.pdf'}"/>
                            <field name="receipt_filename" invisible="1"/>
                            <field name="conditional_validation_state" invisible="1"/>
                        </group>
                    </group>
                    <group string="Tareas">
                        <field name="task_ids" nolabel="1">
                            <tree string="Tareas" editable="top">
                                <field name="key_task_id"/>
                                <field name="area_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="onsc_cv_work_experience_tree_view" model="ir.ui.view">
        <field name="name">onsc.cv.work.experience.tree</field>
        <field name="model">onsc.cv.work.experience</field>
        <field name="arch" type="xml">
            <tree string="Experiencias laborales" decoration-danger="conditional_validation_state == 'rejected'">
                    <field name="position"/>
                    <field name="unit_name"/>
                    <field name="entry_institution_id"/>
                    <field name="hierarchical_level_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="currently_working"/>
                    <field name="conditional_validation_state" invisible="1"/>
            </tree>
        </field>
    </record>
</odoo>
