<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_cv_digital_call_search" model="ir.ui.view">
        <field name="name">onsc.cv.digital.call.search</field>
        <field name="model">onsc.cv.digital.call</field>
        <field name="arch" type="xml">
            <search string="Llamados">
                <field name="partner_id"/>
                <field name="call_number"/>
                <field name="postulation_date"/>
                <field name="postulation_number"/>
                <separator/>
                <filter string="Uruguay" name="filter_uruguay_country" icon="terp-personal"
                        domain="[('cv_emissor_country_id.code','=','UY')]"/>
                <filter string="Inactivos" name="filter_inactive" icon="terp-personal"
                        domain="[('active','=',False)]"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter name="group_by_country_id" string="País" context="{'group_by':'cv_emissor_country_id'}"/>
                    <filter name="group_by_call_number" string="Número de llamado" context="{'group_by':'call_number'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="onsc_cv_digital_call_tree" model="ir.ui.view">
        <field name="name">onsc.cv.digital.call.tree</field>
        <field name="model">onsc.cv.digital.call</field>
        <field name="arch" type="xml">
            <tree string="Llamados" delete="0" edit="0" create="0" duplicate="0">
                <field name="partner_id" string="Nombre"/>
                <field name="call_number"/>
                <field name="postulation_number"/>
                <field name="postulation_date" string="Fecha de actualización"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="onsc_cv_digital_call_form" model="ir.ui.view">
        <field name="name">onsc.cv.digital.call.form</field>
        <field name="model">onsc.cv.digital.call</field>
        <field name="arch" type="xml">
            <form string="Llamados" delete="0" edit="0" create="0" duplicate="0">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <field name="avatar_128" invisible="1"/>
                    <field name="image_1920" widget='image' class="oe_avatar"
                           options='{"preview_image": "avatar_128"}'/>
                    <div class="oe_avatar" style="padding-right:20px">
                        <label for="gral_info_documentary_validation_state" string="Estado de validación documental"/>
                        <h4><field name="gral_info_documentary_validation_state" align="left" style="font-size: 100%; width: 110px;" widget="label_selection" options="{'classes': {'to_validate': 'info', 'validated': 'success'}}"/></h4>
                        <label for="call_conditional_state" string="Estado de validación condicional"/>
                        <h4><field name="call_conditional_state" align="left" style="font-size: 100%; width: 110px;" widget="label_selection" options="{'classes': {'to_validate': 'info', 'validated': 'success'}}"/></h4>
                    </div>
                    <field name="active" invisible="1"/>
                    <field name="is_cv_uruguay" invisible="1"/>
                    <field name="is_partner_cv" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="cv_full_name" readonly="1"/>
                        </h1>
                        <label for="call_number" string="Llamado"/>
                        <h2><field name="call_number"/></h2>
                        <label for="postulation_date" string="Fecha de postulación"/>
                        <h2><field name="postulation_date"/></h2>
                        <label for="postulation_number" string="Número de postulación"/>
                        <h2><field name="postulation_number"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="cv_emissor_country_id"/>
                            <field name="cv_document_type_id"/>
                            <field name="cv_nro_doc"/>
                            <field name="cv_expiration_date" required="1"/>
                            <field name="document_identity_file"
                                           filename="document_identity_filename"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="cv_birthdate"
                                   attrs="{'readonly': [('is_cv_uruguay', '=', True)], 'required': [('is_cv_uruguay', '=', False)]}"/>
                            <field name="cv_sex"
                                   attrs="{'readonly': [('is_cv_uruguay', '=', True)], 'required': [('is_cv_uruguay', '=', False)]}"/>
                            <field name="cv_sex_updated_date"
                                   attrs="{'invisible': [('is_cv_uruguay', '=', True)], 'required': [('is_cv_uruguay', '=', False)]}"/>
                            <field name="last_modification_date"/>
                        </group>
                        <group string="Información patronímica" name="other_info_group">
                            <field name="cv_full_name_updated_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Información general">
                            <group string="Datos personales">
                                <group>
                                    <field name="country_of_birth_id"/>
                                    <field name="marital_status_id"/>
                                    <field name="uy_citizenship"/>
                                    <field name="crendencial_serie"
                                           attrs="{'invisible': [('uy_citizenship', 'not in', ['legal','natural'])], 'required': [('uy_citizenship', 'in', ['legal','natural'])]}"/>
                                    <field name="credential_number"
                                           attrs="{'invisible': [('uy_citizenship', 'not in', ['legal','natural'])], 'required': [('uy_citizenship', 'in', ['legal','natural'])]}"/>
                                    <field name="civical_credential_file" options="{'accepted_file_extensions': '.pdf'}"
                                           filename="civical_credential_filename"
                                           attrs="{'required': [('uy_citizenship', 'in', ['legal','natural'])]}"/>
                                    <field name="document_identity_filename" invisible="1"/>
                                    <field name="civical_credential_filename" invisible="1"/>
                                </group>
                                <group>
                                    <label for="personal_phone"/>
                                    <div class="content-group row" style="margin-left:5px">
                                        <field name="prefix_phone_id" options="{'no_open': True, 'no_create': True}"
                                               style='max-width:75px !important; padding:1px !important;'
                                               class="oe_inline"/>
                                        <field name="personal_phone" class="oe_inline" style="padding:1px !important;"/>
                                    </div>
                                    <label for="mobile_phone"/>
                                    <div class="content-group row" style="margin-left:5px">
                                        <field name="prefix_mobile_phone_id"
                                               options="{'no_open': True, 'no_create': True}"
                                               style='max-width:75px !important; padding:1px !important;'
                                               class="oe_inline"/>
                                        <field name="mobile_phone" class="oe_inline" style="padding:1px !important;"/>
                                    </div>
                                    <field name="email" widget="email"/>
                                    <field name="user_linkedIn"/>
                                    <field name="cjppu_affiliate_number"/>
                                    <field name="professional_resume"
                                           placeholder="Resumen del candidato a modo de introducción"/>
                                    <field name="is_driver_license"/>
                                </group>
                            </group>
                            <group string="Licencias de Conducir"
                                   attrs="{'invisible': [('is_driver_license', '=', False)]}">
                                <field name="drivers_license_ids" nolabel="1" context="{'is_cv_call': True}">
                                    <tree editable="bottom">
                                        <field name="validation_date" width="0.5"/>
                                        <field name="category_id"/>
                                        <field name="license_file"
                                               widget="binary"
                                               filename="license_filename"
                                               options="{'accepted_file_extensions': '.pdf'}"/>
                                        <field name="license_filename" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <group string="Género"
                                    attrs="{'invisible': [('is_cv_gender_public', '=', False),('is_trans', '=', False)]}">
                                    <field name="cv_gender_id"/>
                                    <field name="cv_gender2"
                                           attrs="{'invisible': [('is_cv_gender_option_other_enable', '=', False)], 'required': [('is_cv_gender_option_other_enable', '=', True)]}"/>
                                    <field name="cv_gender_record_file"
                                           filename="cv_gender_record_filename"
                                           attrs="{'invisible': [('is_cv_gender_record', '=', False)]}"/>
                                    <field name="is_cv_gender_public"/>
                                    <field name="is_cv_gender_option_other_enable" invisible="1"/>
                                    <field name="is_cv_gender_record" invisible="1"/>
                                    <field name="cv_gender_record_filename" invisible="1"/>
                                    <field name="is_trans" invisible="1"/>
                                </group>
                                <group string="Raza"
                                    attrs="{'invisible': [('is_cv_race_public', '=', False),('is_afro_descendants', '=', False)]}">
                                    <field name="cv_race_ids" widget="many2many_tags"/>
                                    <field name="cv_race2"
                                           attrs="{'invisible': [('is_cv_race_option_other_enable', '=', False)], 'required': [('is_cv_race_option_other_enable', '=', True)]}"/>
                                    <field name="cv_first_race_id"
                                           attrs="{'invisible': [('is_multiple_cv_race_selected', '=', False)], 'required': [('is_multiple_cv_race_selected', '=', True)]}"/>
                                    <field name="is_cv_race_public"/>
                                    <field name="is_cv_race_option_other_enable" invisible="1"/>
                                    <field name="is_multiple_cv_race_selected" invisible="1"/>
                                    <field name="is_afro_descendants"/>
                                    <field name="afro_descendants_file"
                                           filename="afro_descendants_filename"
                                           attrs="{'required': [('is_afro_descendants', '=', True)]}"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="afro_descendants_filename" invisible="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Carné de salud laboral">
                                    <field name="is_occupational_health_card"/>
                                    <field name="occupational_health_card_date"
                                           attrs="{'invisible': [('is_occupational_health_card', '=', False)], 'required': [('is_occupational_health_card', '=', True)]}"/>
                                    <field name="occupational_health_card_file"
                                           filename="occupational_health_card_filename"
                                           attrs="{'invisible': [('is_occupational_health_card', '=', False)], 'required': [('is_occupational_health_card', '=', True)]}"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="occupational_health_card_filename" invisible="1"/>
                                </group>
                                <group string="Certificado de aptitud médico-deportiva">
                                    <field name="medical_aptitude_certificate_status"/>
                                    <field name="medical_aptitude_certificate_date"
                                           attrs="{'invisible': [('medical_aptitude_certificate_status', '=', 'no')], 'required': [('medical_aptitude_certificate_status', '=', 'si')]}"/>
                                    <field name="medical_aptitude_certificate_file"
                                           filename="medical_aptitude_certificate_filename"
                                           options="{'accepted_file_extensions': '.pdf'}"
                                           attrs="{'invisible': [('medical_aptitude_certificate_status', '=', 'no')], 'required': [('medical_aptitude_certificate_status', '=', 'si')]}"/>
                                    <field name="medical_aptitude_certificate_filename" invisible="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Víctima de delitos violentos"
                                    attrs="{'invisible': [('is_public_information_victim_violent', '=', False),('is_victim_violent', '=', False)]}">
                                    <field name="is_victim_violent"/>
                                    <field name="relationship_victim_violent_file"
                                           filename="relationship_victim_violent_filename"
                                           attrs="{'invisible': [('is_victim_violent', '=', False)]}"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="is_public_information_victim_violent"/>
                                    <field name="relationship_victim_violent_filename" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page name="address" string="Domicilio">
                            <div class="row">
                                <div class="col">
                                    <field name="cv_address_state" invisible="1"/>
                                    <div class="alert alert-info" role="alert"
                                         attrs="{'invisible': [('cv_address_state', '!=', 'to_validate')]}">
                                        <p class="mb-0">
                                            <strong>El domicilio ingresado está en proceso de validación, se notificará
                                                el
                                                resultado de este a su e-mail
                                            </strong>
                                        </p>
                                    </div>
                                    <div class="alert alert-danger" role="alert"
                                         attrs="{'invisible': [('cv_address_state', '!=', 'rejected')]}">
                                        <p class="mb-0">
                                            <strong>El domicilio ha sido rechazado. Motivo:
                                                <field name="cv_address_reject_reason"/>
                                            </strong>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-auto"/>
                            </div>

                            <group>
                                <group>
                                    <field name="country_id" string="País"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    <field name="cv_address_state_id" string="Departamento"
                                           domain="[('country_id', '=?', country_id)]"
                                           context="{'default_country_id': country_id, 'is_readonly': True}"
                                           options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                                    <field name="cv_address_location_id"
                                           domain="[('state_id', '=?', cv_address_state_id)]"
                                           attrs="{'readonly': [('cv_address_state_id', '=', False)]}"
                                           context="{'default_country_id': country_id, 'default_state_id': cv_address_state_id, 'is_readonly': True}"/>
                                </group>
                                <group>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="cv_address_street" string="Calle"/>
                                    <field name="cv_address_street2" string="Entre calle"/>
                                    <field name="cv_address_street3" string="Y calle"/>
                                </group>
                                <group>
                                    <field name="cv_address_nro_door"/>
                                    <field name="cv_address_is_cv_bis"/>
                                    <field name="cv_address_apto"/>
                                    <field name="cv_address_zip" string="C.P"/>
                                </group>
                            </group>
                            <group>
                                <field name="cv_address_amplification"/>
                            </group>
                        </page>
                        <page name="formation" string="Formación">
                            <div>
                                <h4>Formación básica</h4>
                            </div>
                            <field name="basic_formation_ids" context="{'is_cv_call': True}"/>
                            <br/>
                            <div>
                                <h4>Formación avanzada</h4>
                            </div>
                            <field name="advanced_formation_ids" context="{'is_cv_call': True}"/>
                        </page>
                        <page name="course_certificate" string="Cursos y certificados">
                            <div>
                                <h4>Cursos, talleres y otras capacitaciones</h4>
                            </div>
                            <field name="course_ids"
                                   context="{'tree_view_ref': 'onsc_cv_digital.onsc_cv_course_view_tree', 'default_record_type': 'course', 'is_cv_call': True}"/>
                            <br/>
                            <div>
                                <h4>Certificados</h4>
                            </div>
                            <field name="certificate_ids"
                                   context="{'tree_view_ref': 'onsc_cv_digital.onsc_cv_certificate_view_tree', 'default_record_type': 'certificate', 'is_cv_call': True}"/>
                        </page>
                        <page name="work_experience" string="Experiencia laboral">
                            <field name="work_experience_ids" context="{'is_cv_call': True}"/>
                        </page>
                        <page name="work_teaching" string="Docencia">
                            <field name="work_teaching_ids" context="{'is_cv_call': True}"/>
                        </page>
                        <page name="work_investigation" string="Investigación">
                            <field name="work_investigation_ids" context="{'is_cv_call': True}"/>
                        </page>
                        <page name="volunteering" string="Voluntariado">
                            <field name="volunteering_ids" context="{'is_cv_call': True}"/>
                        </page>
                        <page name="language_level" string="Idiomas">
                            <field name="language_level_ids"/>
                        </page>
                        <page name="publications_productions_evaluations"
                              string="Publicaciones, producciones y evaluaciones">
                            <field name="publication_production_evaluation_ids" context="{'is_cv_call': True}"/>
                        </page>
                        <page name="tutoring_orientation_supervision" string="Tutorías, orientaciones, supervisiones">
                            <field name="tutoring_orientation_supervision_ids" context="{'is_cv_call': True}"/>
                        </page>
                        <page string="Discapacidad"
                            attrs="{'invisible': [('allow_content_public', '=', False),('is_disabilitie', '=', False)]}">
                            <group>
                                <group>
                                    <field name="is_disabilitie" invisible="1"/>
                                    <field name="allow_content_public"/>
                                    <field name="situation_disability"/>
                                    <field name="people_disabilitie"
                                           attrs="{'invisible': [('situation_disability', '!=', 'si')]}"/>
                                </group>
                                <group>
                                    <field name="document_certificate_filename" invisible="1"/>
                                    <field name="document_certificate_file" filename="document_certificate_filename"
                                           options="{'accepted_file_extensions': '.pdf'}"
                                           attrs="{'invisible': [('people_disabilitie', '!=', 'si')],'required': [('people_disabilitie', '=', 'si')]}"/>
                                    <field name="certificate_date"
                                           attrs="{'invisible': [('people_disabilitie', '!=', 'si')],'required': [('people_disabilitie', '=', 'si')]}"/>
                                    <field name="to_date" attrs="{'invisible': [('people_disabilitie', '!=', 'si')]}"/>
                                </group>
                            </group>
                            <group string="Tiene dificultad permanente para:"
                                   attrs="{'invisible': [('situation_disability', '!=', 'si')]}">
                                <group>
                                    <field name="see" widget="radio"/>
                                    <br/>
                                    <field name="walk" widget="radio"/>
                                    <br/>
                                    <field name="realize" widget="radio"/>
                                    <br/>
                                    <field name="interaction" widget="radio"/>
                                </group>
                                <group>
                                    <field name="hear" widget="radio"/>
                                    <br/>
                                    <field name="speak" widget="radio"/>
                                    <br/>
                                    <field name="lear" widget="radio"/>
                                </group>
                            </group>
                            <group string="Seleccione los apoyos que desea:"
                                   attrs="{'invisible': [('situation_disability', '!=', 'si')]}">
                            <group>
                                    <field name="type_support_ids_domain" invisible="1"/>
                                    <field name="type_support_ids" widget="many2many_tags"
                                           domain="[('id', 'in', type_support_ids_domain)]"/>
                                    <field name="is_need_other_support" invisible="1"/>
                                </group>
                                <group>
                                    <field name="need_other_support"
                                           attrs="{'invisible': [('is_need_other_support', '!=', True)]}"/>
                                </group>
                            </group>
                        </page>
                        <page name="participation_event"
                              string="Participación en eventos">
                            <field name="participation_event_ids" context="{'is_cv_call': True}"/>
                        </page>
                        <page name="other_relevant_information"
                              string="Otra información relevante">
                            <field name="other_relevant_information_ids">
                                <tree editable="top">
                                    <field name="theme"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                        <page name="reference" string="Referencias">
                            <field name="reference_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='onsc_cv_digital_call_action' model='ir.actions.act_window'>
        <field name="name">Llamados</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">onsc.cv.digital.call</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'is_cv_call': True,'search_default_group_by_call_number': True}</field>
        <field name="domain">[('type','=','call')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>
</odoo>
