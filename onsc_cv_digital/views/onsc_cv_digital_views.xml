<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_cv_digital_search" model="ir.ui.view">
        <field name="name">onsc.cv.digital.search</field>
        <field name="model">onsc.cv.digital</field>
        <field name="arch" type="xml">
            <search string="Currículums digitales">
                <field name="partner_id"/>
                <separator/>
                <filter string="Uruguay" name="filter_uruguay_country" icon="terp-personal"
                        domain="[('cv_emissor_country_id.code','=','UY')]"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter name="filter_country_id" string="País" context="{'group_by':'cv_emissor_country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="onsc_cv_digital_tree" model="ir.ui.view">
        <field name="name">onsc.cv.digital.tree</field>
        <field name="model">onsc.cv.digital</field>
        <field name="arch" type="xml">
            <tree string="Currículums digitales">
                <field name="partner_id"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="onsc_cv_digital_form" model="ir.ui.view">
        <field name="name">onsc.cv.digital.form</field>
        <field name="model">onsc.cv.digital</field>
        <field name="arch" type="xml">
            <form string="Currículums digitales">
                <header>
                </header>
                <sheet>
                    <div class="alert alert-danger" role="alert"
                         attrs="{'invisible': [('active', '=', True)]}">
                        <p class="mb-0" style="text-align:center">
                            <strong>
                                Su Curriculum se encuentra inactivo.
                                <button type="object" class="oe_link alert-danger" role="alert" name="toggle_active"
                                        string="Para reestablecerlo de click aquí"
                                        style="font-weight:bold;text-decoration:underline"/>
                            </strong>
                        </p>
                    </div>
                    <field name="avatar_128" invisible="1"/>
                    <field name="image_1920" widget='image' class="oe_avatar"
                           options='{"preview_image": "avatar_128"}'/>
                    <field name="active" invisible="1"/>
                    <field name="is_cv_uruguay" invisible="1"/>
                    <field name="is_partner_cv" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="cv_full_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="cv_emissor_country_id"/>
                            <field name="cv_document_type_id"/>
                            <field name="cv_nro_doc"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="cv_birthdate"
                                   attrs="{'readonly': [('is_cv_uruguay', '=', True)], 'required': [('is_cv_uruguay', '=', False)]}"/>
                            <field name="cv_sex"
                                   attrs="{'readonly': [('is_cv_uruguay', '=', True)], 'required': [('is_cv_uruguay', '=', False)]}"/>
                            <field name="cv_sex_updated_date"
                                   attrs="{'invisible': [('is_cv_uruguay', '=', True)], 'required': [('is_cv_uruguay', '=', False)]}"/>
                            <field name="cv_expiration_date" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Información general">
                            <div class="float-right">
                                <field name="cv_help_general_info"/>
                            </div>
                            <group>
                                <group string="Género">
                                    <field name="cv_gender_id"/>
                                    <field name="cv_gender2"
                                           attrs="{'invisible': [('is_cv_gender_option_other_enable', '=', False)], 'required': [('is_cv_gender_option_other_enable', '=', True)]}"/>
                                    <field name="cv_gender_record"
                                           attrs="{'invisible': [('is_cv_gender_record', '=', False)]}"/>
                                    <field name="is_cv_gender_public"/>
                                    <field name="is_cv_gender_option_other_enable" invisible="1"/>
                                    <field name="is_cv_gender_record" invisible="1"/>
                                </group>
                                <group string="Raza">
                                    <field name="cv_race_ids" widget="many2many_tags"/>
                                    <field name="cv_race2"
                                           attrs="{'invisible': [('is_cv_race_option_other_enable', '=', False)], 'required': [('is_cv_race_option_other_enable', '=', True)]}"/>
                                    <field name="cv_first_race_id"
                                           attrs="{'invisible': [('is_multiple_cv_race_selected', '=', False)], 'required': [('is_multiple_cv_race_selected', '=', True)]}"/>
                                    <field name="is_cv_race_public"/>
                                    <field name="is_cv_race_option_other_enable" invisible="1"/>
                                    <field name="is_multiple_cv_race_selected" invisible="1"/>
                                </group>
                                <group string="Información patronímica" name="other_info_group">
                                    <field name="cv_full_name_updated_date"/>
                                </group>
                                <group>
                                </group>
                            </group>
                            <group string="Datos personales">
                                <group>
                                    <field name="country_of_birth_id"/>
                                    <field name="uruguayan_citizenship"/>
                                    <field name="marital_status_id"/>
                                    <field name="crendencial_serie"
                                           attrs="{'invisible': [('uruguayan_citizenship', 'not in', ['legal','natural'])], 'required': [('uruguayan_citizenship', 'in', ['legal','natural'])]}"/>
                                    <field name="credential_number"
                                           attrs="{'invisible': [('uruguayan_citizenship', 'not in', ['legal','natural'])], 'required': [('uruguayan_citizenship', 'in', ['legal','natural'])]}"/>
                                    <field name="cjppu_affiliate_number"/>
                                    <field name="professional_resume"
                                           placeholder="Resumen del candidato a modo de introducción"/>
                                    <field name="user_linkedIn"/>
                                    <field name="personal_phone" widget="phone"/>
                                    <field name="mobile_phone" widget="phone"/>
                                    <field name="email" widget="email"/>
                                </group>
                                <group>
                                    <field name="is_afro_descendants"/>
                                    <field name="afro_descendants_file"
                                           attrs="{'required': [('is_afro_descendants', '=', True)]}"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="is_driver_license"/>
                                </group>
                            </group>
                            <group string="Licencias de Conducir"
                                   attrs="{'invisible': [('is_driver_license', '=', False)]}">
                                <field name="drivers_license_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="validation_date"/>
                                        <field name="category_id"/>
                                        <field name="license_file" options="{'accepted_file_extensions': '.pdf'}"/>
                                        <field name="license_attachment_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <group string="Carnet Salud Laboral">
                                    <field name="is_occupational_health_card"/>
                                    <field name="occupational_health_card_date"
                                           attrs="{'invisible': [('is_occupational_health_card', '=', False)], 'required': [('is_occupational_health_card', '=', True)]}"/>
                                    <field name="occupational_health_card_file"
                                           attrs="{'invisible': [('is_occupational_health_card', '=', False)], 'required': [('is_occupational_health_card', '=', True)]}"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                </group>
                                <group string="Carnet de Identidad">
                                    <field name="document_identity_file"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="document_identity_validation_status" readonly="1"
                                           attrs="{'invisible': [('document_identity_validation_status', '!=', 'rechazado')]}"/>
                                    <field name="document_identity_reject_reason" readonly="1"
                                           attrs="{'invisible': [('document_identity_validation_status', '!=', 'rechazado')]}"/>
                                </group>
                            </group>
                            <group>
                                <group string="Certificado de aptitud médico-deportiva">
                                    <field name="medical_aptitude_certificate_status"/>
                                    <field name="medical_aptitude_certificate_date"
                                           attrs="{'invisible': [('medical_aptitude_certificate_status', '=', 'no')], 'required': [('medical_aptitude_certificate_status', '=', 'si')]}"/>
                                    <field name="medical_aptitude_certificate_file"
                                           options="{'accepted_file_extensions': '.pdf'}"
                                           attrs="{'invisible': [('medical_aptitude_certificate_status', '=', 'no')], 'required': [('medical_aptitude_certificate_status', '=', 'si')]}"/>
                                </group>
                                <group string="Credencial cívica">
                                    <field name="civical_credential_file" options="{'accepted_file_extensions': '.pdf'}"
                                           attrs="{'required': [('uruguayan_citizenship', 'in', ['legal','natural'])]}"/>
                                    <field name="civical_credential_status" readonly="1"
                                           attrs="{'invisible': [('civical_credential_status', '!=', 'rechazado')]}"/>
                                    <field name="civical_credential_reject_reason" readonly="1"
                                           attrs="{'invisible': [('civical_credential_status', '!=', 'rechazado')]}"/>
                                </group>
                                <group string="Víctima de delitos violentos">
                                    <field name="is_victim_violent"/>
                                    <field name="relationship_victim_violent_file"
                                           attrs="{'invisible': [('is_victim_violent', '=', False)]}"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="is_public_information_victim_violent"/>
                                </group>
                            </group>
                        </page>
                        <page name="address" string="Domicilio">
                            <div class="float-right">
                                <field name="cv_help_address"/>
                            </div>
                            <button string="Agregar/Modificar domicilio" name="button_edit_address" id="button_edit_address_2"
                                    type="object"
                                    groups="onsc_cv_digital.group_user_cv"
                                    attrs="{'invisible': [('country_id', '=', False)]}"/>
                            <field name="cv_address_state" invisible="1"/>
                            <div class="alert alert-info" role="alert"
                                 attrs="{'invisible': [('cv_address_state', '!=', 'to_validate')]}">
                                <p class="mb-0">
                                    <strong>El domicilio ingresado está en proceso de validación, se notificará el
                                        resultado de este a su e-mail
                                    </strong>
                                </p>
                            </div>
                            <div class="alert alert-danger" role="alert"
                                 attrs="{'invisible': [('cv_address_state', '!=', 'rejected')]}">
                                <p class="mb-0">
                                    <strong>El domicilio ha sido rechazado. Motivo:
                                        <field name="cv_address_reject_reason"/>
                                    </strong>
                                </p>
                            </div>
                            <group>
                                <group>
                                    <field name="country_id" string="País"/>
                                    <field name="cv_address_state_id" string="Departamento"/>
                                    <field name="cv_address_location_id"/>
                                </group>
                                <group>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="cv_address_street" string="Calle"/>
                                    <field name="cv_address_street2" string="Entre calle"/>
                                    <field name="cv_address_street3" string="Y calle"/>
                                </group>
                                <group>
                                    <field name="cv_address_apto"/>
                                    <field name="cv_address_nro_door"/>
                                    <field name="cv_address_is_cv_bis"/>
                                    <field name="cv_address_zip" string="C.P"/>
                                </group>
                            </group>
                            <group>
                                <field name="cv_address_amplification"/>
                            </group>
                        </page>
                        <page name="work_experience" string="Experiencia Laboral">
                            <div class="float-right">
                                <field name="cv_help_work_experience"/>
                            </div>
                            <field name="work_experience_id">
                            </field>
                        </page>
                        <page string="Formación">
                            <div class="float-right">
                                <field name="cv_help_formation"/>
                            </div>
                            <div>
                                <h4>Formación básica</h4>
                            </div>
                            <field name="basic_formation_ids"/>
                            <br/>
                            <div>
                                <h4>Formación avanzada</h4>
                            </div>
                            <field name="advanced_formation_ids"/>
                        </page>
                        <page string="Cursos y certificados">
                            <div class="float-right">
                                <field name="cv_help_course_certificate"/>
                            </div>
                            <field name="course_certificate_ids">
                                <tree string="Cursos y certificados">
                                    <field name="record_type"/>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="country_id" optional="hide"/>
                                    <field name="institution_id" optional="hide"/>
                                    <field name="state" optional="show"/>
                                    <field name="approbation_mode" optional="hide"/>
                                    <field name="induction_type" optional="hide"/>
                                    <field name="dictation_mode" optional="hide"/>
                                    <field name="hours_total" optional="hide"/>
                                    <field name="knowledge_acquired_ids" widget="many2many_tags" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="kanban_digital_cv">
        <field name="name">onsc.cv.digital.kanban</field>
        <field name="model">onsc.cv.digital</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="id"/>
                <field name="cv_full_name"/>
                <field name="email"/>
                <field name="cv_nro_doc"/>
                <field name="cv_emissor_country_id"/>
                <field name="avatar_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <div class="o_kanban_image_fill_left o_kanban_image_full"
                                 t-attf-style="background-image: url(#{kanban_image('onsc.cv.digital', 'avatar_128', record.id.raw_value)})"
                                 role="img"/>
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="cv_full_name"/>
                                </strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul>
                                    <li t-if="record.cv_emissor_country_id.raw_value">
                                        <t>
                                            <field name="cv_emissor_country_id"/>
                                        </t>
                                    </li>
                                    <li t-if="record.email.raw_value" class="o_text_overflow">
                                        <t>
                                            <field name="email"/>
                                        </t>
                                    </li>
                                    <li t-if="record.cv_nro_doc" class="o_text_overflow">
                                        <t>
                                            <field name="cv_nro_doc"/>
                                        </t>
                                    </li>
                                </ul>
                                <div class="o_row">
                                    <span class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="onsc_cv_digital_user_action" model="ir.actions.server">
        <field name="name">Currículum Digital</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="model_onsc_cv_digital"/>
        <field name="code">
            action = model._action_open_user_cv()
        </field>
    </record>

    <record id='onsc_cv_digital_action' model='ir.actions.act_window'>
        <field name="name">Currículums Digitales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">onsc.cv.digital</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('active','in',[False,True])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo Currículum digital
            </p>
        </field>
    </record>

</odoo>
