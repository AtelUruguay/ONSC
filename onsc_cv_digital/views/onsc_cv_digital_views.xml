<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_cv_digital_search" model="ir.ui.view">
        <field name="name">onsc.cv.digital.search</field>
        <field name="model">onsc.cv.digital</field>
        <field name="arch" type="xml">
            <search string="Currículums digitales">
                <field name="partner_id"/>
                <separator/>
                <filter string="Uruguay" name="filter_uruguay_country" icon="terp-personal"
                        domain="[('cv_emissor_country_id.code','=','UY')]"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter name="filter_country_id" string="País" context="{'group_by':'cv_emissor_country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="onsc_cv_digital_tree" model="ir.ui.view">
        <field name="name">onsc.cv.digital.tree</field>
        <field name="model">onsc.cv.digital</field>
        <field name="arch" type="xml">
            <tree string="Currículums digitales" delete="0" create="0">
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="onsc_cv_digital_form" model="ir.ui.view">
        <field name="name">onsc.cv.digital.form</field>
        <field name="model">onsc.cv.digital</field>
        <field name="arch" type="xml">
            <form string="Currículums digitales" delete="0" duplicate="0" create="0">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="button_copy_cv"
                                string="Mis postulaciones"
                                context="{'from_cv_action': True}"
                                groups="onsc_cv_digital.group_user_cv"
                                type="object" icon="fa-copy"/>
                        <button class="oe_stat_button" name="%(onsc_cv_digital.onsc_cv_report_wizard_action)d"
                                string="Imprimir CV"
                                groups="onsc_cv_digital.group_user_cv"
                                type="action" icon="fa-print"/>
                        <button class="oe_stat_button" name="button_unlink"
                                confirm="¿Está seguro que desea eliminar su CV? Si selecciona Aceptar el mismo se eliminará permanentemente perdiéndose todos los datos ingresados"
                                string="Eliminar"
                                groups="onsc_cv_digital.group_user_cv"
                                type="object" icon="fa-trash"/>
                        <button class="oe_stat_button" name="toggle_active"
                                confirm="¿Está seguro de que desea inactivar su CV?"
                                string="Inactivar"
                                groups="onsc_cv_digital.group_user_cv"
                                attrs="{'invisible': [('active', '=', False)]}"
                                type="object" icon="fa-archive"/>
                    </div>
                    <div class="alert alert-danger" role="alert"
                         attrs="{'invisible': [('active', '=', True)]}">
                        <p class="mb-0" style="text-align:center">
                            <strong>
                                Su Curriculum se encuentra inactivo.
                                <button type="object" class="oe_link alert-danger" role="alert" name="toggle_active"
                                        string="Para reestablecerlo de click aquí"
                                        style="font-weight:bold;text-decoration:underline"/>
                            </strong>
                        </p>
                    </div>
                    <div class="alert alert-info" role="alert"
                         name="div_cv_user_acceptance"
                         style="overflow:hidden;"
                         invisible="context.get('user_cv', False) is False"
                         attrs="{'invisible': ['|',('is_cv_user_acceptance_ok', '=', True),('is_cv_user_acceptance_active', '=', False)]}">
                        <div class="oe_left">
                            <p class="mb-0">
                            <strong>
                                <field name="cv_user_acceptance"/>
                                <field name="is_cv_user_acceptance_ok" invisible="1"/>
                                <field name="is_cv_user_acceptance_active" invisible="1"/>
                            </strong>
                            <newline/>
                            <button type="object"
                                    icon="fa-thumbs-o-up"
                                    class="btn-success oe_inline"
                                    style="margin-top:15px"
                                    name="button_cv_user_acceptance_ok"
                                    string="Aceptar"/>
                            <button
                                    icon="fa-thumbs-o-down"
                                    class="btn-outline-danger oe_inline"
                                    style="margin-top:15px"
                                    onclick="$('div[name|=\'div_cv_user_acceptance\']').slideUp();"
                                    string="Rechazar"/>
                            </p>
                        </div>
                    </div>
                    <field name="avatar_128" invisible="1"/>
                    <field name="image_1920" widget='image' class="oe_avatar"
                           options='{"preview_image": "avatar_128"}'/>
                    <field name="active" invisible="1"/>
                    <field name="is_cv_uruguay" invisible="1"/>
                    <field name="is_partner_cv" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="cv_full_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="cv_emissor_country_id"/>
                            <field name="cv_document_type_id"/>
                            <field name="cv_nro_doc"/>
                            <field name="cv_expiration_date" required="1"/>
                            <field name="is_cv_uruguay_ci" invisible="1"/>
                            <field name="document_identity_file"
                                   filename="document_identity_filename"
                                   options="{'accepted_file_extensions': '.pdf'}"/>
                            <div class="row" nolabel="1" colspan="2">
                                <div class="alert alert-danger" role="alert" style="width:70%"
                                     attrs="{'invisible': [('nro_doc_documentary_validation_state', '!=', 'rejected')]}">
                                    <p class="mb-0">
                                        <strong>
                                            La sección documento de identidad ha sido rechazada. Motivo del rechazo:
                                            <field name="nro_doc_documentary_reject_reason" class="oe_inline"
                                                   readonly="1"/>
                                            <p/>
                                            Fecha:
                                            <field name="nro_doc_documentary_validation_date" class="oe_inline"
                                                   readonly="1"/>
                                            Usuario:
                                            <field name="nro_doc_documentary_user_id" class="oe_inline"
                                                   options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"
                                                   readonly="1"/>
                                        </strong>
                                    </p>
                                </div>
                                <div class="alert alert-success" role="alert"  style="width:70%"
                                     attrs="{'invisible': [('nro_doc_documentary_validation_state', '!=', 'validated')]}">
                                    <p class="mb-0">
                                        <strong>
                                            La sección documento de identidad ha sido validada
                                            <p/>
                                            Fecha: <field name="nro_doc_documentary_validation_date" readonly="1" class="oe_inline"/>
                                            Usuario: <field name="nro_doc_documentary_user_id" class="oe_inline"
                                                            options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"
                                                            readonly="1"/>
                                        </strong>
                                    </p>
                                </div>
                            </div>
                            <field name="partner_id" invisible="1"/>
                            <field name="active" invisible="1"/>
                            <field name="nro_doc_documentary_validation_state" invisible="1"/>
                        </group>
                        <group>
                            <field name="cv_birthdate"
                                   attrs="{'readonly': [('is_cv_uruguay', '=', True)], 'required': [('is_cv_uruguay', '=', False)]}"/>
                        </group>
                        <group string="Información patronímica" name="other_info_group">
                            <field name="cv_full_name_updated_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Información general">
                            <div class="float-right">
                                <field name="cv_help_general_info"/>
                            </div>
                            <group string="Datos personales">
                                <group>
                                    <field name="country_of_birth_id" required="True"/>
                                    <field name="marital_status_id" required="True"/>
                                    <field name="uy_citizenship" required="True"/>
                                    <field name="crendencial_serie"
                                           attrs="{'invisible': [('uy_citizenship', 'not in', ['legal','natural'])]}"/>
                                    <field name="credential_number"
                                           attrs="{'invisible': [('uy_citizenship', 'not in', ['legal','natural'])]}"/>
                                    <field name="civical_credential_file" options="{'accepted_file_extensions': '.pdf'}"
                                           filename="civical_credential_filename"
                                           attrs="{'invisible': [('uy_citizenship', 'not in', ['legal','natural'])]}"/>
                                    <div class="row" nolabel="1" colspan="2">
                                        <div class="alert alert-danger" role="alert" style="width:70%"
                                             attrs="{'invisible': [('civical_credential_documentary_validation_state', '!=', 'rejected')]}">
                                            <p class="mb-0">
                                                <strong>
                                                    La sección credencial cívica ha sido rechazada. Motivo del rechazo:
                                                    <field name="civical_credential_documentary_reject_reason" class="oe_inline"
                                                           readonly="1"/>
                                                    <p/>
                                                    Fecha:
                                                    <field name="civical_credential_documentary_validation_date" class="oe_inline"
                                                           readonly="1"/>
                                                    Usuario:
                                                    <field name="civical_credential_documentary_user_id" class="oe_inline"
                                                           options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"
                                                           readonly="1"/>
                                                </strong>
                                            </p>
                                        </div>
                                        <div class="alert alert-success" role="alert" style="width:70%"
                                             attrs="{'invisible': ['|','|',('is_civical_credential_populated','=',False),('uy_citizenship', '=', 'extranjero'),('civical_credential_documentary_validation_state', '!=', 'validated')]}">
                                            <p class="mb-0">
                                                <strong>
                                                    La sección credencial cívica ha sido validada
                                                    <p/>
                                                    Fecha: <field name="civical_credential_documentary_validation_date" readonly="1" class="oe_inline"/> Usuario:
                                                    <field name="civical_credential_documentary_user_id" class="oe_inline" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"
                                                        readonly="1"/>
                                                </strong>
                                            </p>
                                        </div>
                                    </div>
                                    <field name="is_civical_credential_populated" invisible="1"/>
                                    <field name="document_identity_filename" invisible="1"/>
                                    <field name="civical_credential_filename" invisible="1"/>
                                    <field name="civical_credential_documentary_validation_state" invisible="1"/>
                                </group>
                                <group>
                                    <label for="personal_phone"/>
                                    <div class="content-group row" style="margin-left:5px">
                                        <field name="prefix_phone_id" options="{'no_open': True, 'no_create': True}"
                                               style='max-width:75px !important; padding:1px !important;'
                                               class="oe_inline"/>
                                        <field name="personal_phone" class="oe_inline" style="padding:1px !important;"/>
                                    </div>
                                    <label for="mobile_phone"/>
                                    <div class="content-group row" style="margin-left:5px">
                                        <field name="prefix_mobile_phone_id"
                                               options="{'no_open': True, 'no_create': True}"
                                               style='max-width:75px !important; padding:1px !important;'
                                               class="oe_inline"/>
                                        <field name="mobile_phone" class="oe_inline" style="padding:1px !important;"/>
                                    </div>
                                    <field name="email" widget="email"/>
                                    <field name="user_linkedIn"/>
                                    <field name="cjppu_affiliate_number"/>
                                    <field name="professional_resume"
                                           placeholder="Resumen del candidato a modo de introducción"/>
                                    <field name="is_driver_license" force_save="1"/>
                                </group>
                            </group>
                            <group string="Licencias de Conducir"
                                   attrs="{'invisible': [('is_driver_license', '=', False)]}">
                                <field name="drivers_license_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="validation_date" width="0.5"/>
                                        <field name="category_id"/>
                                        <field name="license_file"
                                               widget="binary"
                                               filename="license_filename"
                                               options="{'accepted_file_extensions': '.pdf'}"/>
                                        <field name="license_filename" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <group string="Género">
                                    <field name="cv_gender_id" options="{'limit': 12}" required="True"/>
                                    <field name="cv_gender2"
                                           attrs="{'invisible': [('is_cv_gender_option_other_enable', '=', False)], 'required': [('is_cv_gender_option_other_enable', '=', True)]}"/>
                                    <field name="cv_gender_record_file"
                                           filename="cv_gender_record_filename"
                                           options="{'accepted_file_extensions': '.pdf'}"
                                           attrs="{'invisible': [('is_cv_gender_record', '=', False)]}"/>
                                    <field name="is_cv_gender_public"
                                           help="Esta información podrá ser utilizada con fines estadísticos, y por el Tribunal de Concurso o la unidad de Gestión Humana del organismo contratante cuando corresponda, independientemente de que usted decida incluirla o no en la versión impresa de su CV"/>
                                    <field name="is_cv_gender_option_other_enable" invisible="1"/>
                                    <field name="is_cv_gender_record" invisible="1"/>
                                    <field name="cv_gender_record_filename" invisible="1"/>
                                </group>
                                <group string="Identidad étnico-racial">
                                    <field name="cv_race_ids" widget="many2many_tags" required="1"/>
                                    <field name="cv_race2"
                                           attrs="{'invisible': [('is_cv_race_option_other_enable', '=', False)], 'required': [('is_cv_race_option_other_enable', '=', True)]}"/>
                                    <field name="cv_first_race_id"
                                           attrs="{'invisible': [('is_multiple_cv_race_selected', '=', False)], 'required': [('is_multiple_cv_race_selected', '=', True)]}"/>
                                    <field name="is_cv_race_public"
                                           help="Esta información podrá ser utilizada con fines estadísticos, y por el Tribunal de Concurso o la unidad de Gestión Humana del organismo contratante cuando corresponda, independientemente de que usted decida incluirla o no en la versión impresa de su CV"/>
                                    <field name="is_cv_race_option_other_enable" invisible="1"/>
                                    <field name="is_multiple_cv_race_selected" invisible="1"/>
                                    <field name="is_afro_descendants"/>
                                    <field name="afro_descendants_file"
                                           filename="afro_descendants_filename"
                                           attrs="{'invisible': [('is_afro_descendants', '!=', True)]}"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="afro_descendants_filename" invisible="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Carné de salud laboral">
                                    <field name="is_occupational_health_card"/>
                                    <field name="occupational_health_card_date"
                                           attrs="{'invisible': [('is_occupational_health_card', '=', False)], 'required': [('is_occupational_health_card', '=', True)]}"/>
                                    <field name="occupational_health_card_file"
                                           filename="occupational_health_card_filename"
                                           attrs="{'invisible': [('is_occupational_health_card', '=', False)]}"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="occupational_health_card_filename" invisible="1"/>
                                </group>
                                <group string="Certificado de aptitud médico-deportiva">
                                    <field name="is_medical_aptitude_certificate_status"/>
                                    <field name="medical_aptitude_certificate_date"
                                           attrs="{'invisible': [('is_medical_aptitude_certificate_status', '=', False)], 'required': [('is_medical_aptitude_certificate_status', '=',True)]}"/>
                                    <field name="medical_aptitude_certificate_file"
                                           filename="medical_aptitude_certificate_filename"
                                           options="{'accepted_file_extensions': '.pdf'}"
                                           attrs="{'invisible': [('is_medical_aptitude_certificate_status', '=', False)]}"/>
                                    <field name="medical_aptitude_certificate_filename" invisible="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Víctima de delitos violentos">
                                    <field name="is_victim_violent"/>
                                    <field name="relationship_victim_violent_file"
                                           filename="relationship_victim_violent_filename"
                                           attrs="{'invisible': [('is_victim_violent', '=', False)]}"
                                           options="{'accepted_file_extensions': '.pdf'}"/>
                                    <field name="is_public_information_victim_violent"
                                           help="Esta información podrá ser utilizada con fines estadísticos, y por el Tribunal de Concurso o la unidad de Gestión Humana del organismo contratante cuando corresponda, independientemente de que usted decida incluirla o no en la versión impresa de su CV"/>
                                    <field name="relationship_victim_violent_filename" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page name="address" string="Domicilio">
                            <div class="row">
                                <div class="col">
                                    <field name="cv_address_state" invisible="1"/>
                                    <div class="alert alert-info" role="alert"
                                         attrs="{'invisible': [('cv_address_state', '!=', 'to_validate')]}">
                                        <p class="mb-0">
                                            <strong>El domicilio ingresado está en proceso de validación, se notificará
                                                el
                                                resultado de este a su e-mail
                                            </strong>
                                        </p>
                                    </div>
                                    <div class="alert alert-danger" role="alert"
                                         attrs="{'invisible': [('cv_address_state', '!=', 'rejected')]}">
                                        <p class="mb-0">
                                            <strong>El domicilio ha sido rechazado. Motivo:
                                                <field name="cv_address_reject_reason"/>
                                            </strong>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-auto"/>
                                <div class="col col-lg-2">
                                    <div class="float-right">
                                        <field name="cv_help_address"/>
                                    </div>
                                </div>
                            </div>

                            <group>
                                <group>
                                    <field name="country_id" string="País"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    <field name="cv_address_state_id" string="Departamento"
                                           domain="[('country_id', '=?', country_id)]"
                                           context="{'default_country_id': country_id, 'is_readonly': True}"
                                           options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                                    <field name="cv_address_location_id"
                                           domain="[('state_id', '=?', cv_address_state_id)]"
                                           attrs="{'readonly': [('cv_address_state_id', '=', False)]}"
                                           options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"
                                           context="{'default_country_id': country_id, 'default_state_id': cv_address_state_id, 'is_readonly': True}"/>
                                </group>
                                <group>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="country_code" invisible="1"/>
                                    <field name="cv_address_street_id"
                                           attrs="{'invisible': [('country_code', '!=', 'UY')]}"
                                           domain="[('state_id', '=', cv_address_state_id),('cv_location_id', '=', cv_address_location_id)]"
                                           context="{'default_cv_location_id': cv_address_location_id,'default_state_id': cv_address_state_id, 'is_readonly': True}"/>
                                    <field name="cv_address_street2_id"
                                           attrs="{'invisible': [('country_code', '!=', 'UY')]}"
                                           domain="[('state_id', '=', cv_address_state_id),('cv_location_id', '=', cv_address_location_id)]"
                                           context="{'default_cv_location_id': cv_address_location_id, 'default_state_id': cv_address_state_id, 'is_readonly': True}"/>
                                    <field name="cv_address_street3_id"
                                           attrs="{'invisible': [('country_code', '!=', 'UY')]}"
                                           domain="[('state_id', '=', cv_address_state_id),('cv_location_id', '=', cv_address_location_id)]"
                                           context="{'default_cv_location_id': cv_address_location_id, 'default_state_id': cv_address_state_id, 'is_readonly': True}"/>
                                    <field name="cv_address_street" string="Calle"
                                           attrs="{'invisible': [('country_code', '=', 'UY')]}"/>
                                    <field name="cv_address_nro_door"/>
                                    <field name="cv_address_is_cv_bis"/>
                                    <field name="cv_address_apto"/>
                                    <field name="cv_address_zip" string="C.P"/>
                                </group>
                                <group>
                                    <field name="cv_address_place"/>
                                    <field name="cv_address_block"/>
                                    <field name="cv_address_sandlot"/>
                                </group>
                            </group>
                            <group>
                                <field name="cv_address_amplification"/>
                            </group>
                        </page>
                        <page name="formation" string="Formación">
                            <div class="float-right">
                                <field name="cv_help_formation"/>
                            </div>
                            <div>
                                <h4>Formación básica</h4>
                            </div>
                            <field name="basic_formation_ids"/>
                            <br/>
                            <div>
                                <h4>Formación avanzada</h4>
                            </div>
                            <field name="advanced_formation_ids"/>
                        </page>
                        <page name="course_certificate" string="Cursos y certificados">
                            <div class="float-right">
                                <field name="cv_help_course_certificate"/>
                            </div>
                            <div>
                                <h4>Cursos, talleres y otras capacitaciones</h4>
                            </div>
                            <field name="course_ids"
                                   context="{'tree_view_ref': 'onsc_cv_digital.onsc_cv_course_view_tree'}"/>
                            <br/>
                        </page>
                        <page name="work_experience" string="Experiencia laboral">
                            <div class="float-right">
                                <field name="cv_help_work_experience"/>
                            </div>
                            <field name="work_experience_ids"/>
                        </page>
                        <page name="work_teaching" string="Docencia">
                            <div class="float-right">
                                <field name="cv_help_work_teaching"/>
                            </div>
                            <field name="work_teaching_ids"/>
                        </page>
                        <page name="work_investigation" string="Investigación">
                            <div class="float-right">
                                <field name="cv_help_work_investigation"/>
                            </div>
                            <field name="work_investigation_ids"/>
                        </page>
                        <page name="volunteering" string="Voluntariado">
                            <div class="float-right">
                                <field name="cv_help_volunteering"/>
                            </div>
                            <field name="volunteering_ids"/>
                        </page>
                        <page name="language_level" string="Idiomas">
                            <div class="float-right">
                                <field name="cv_help_language_level"/>
                            </div>
                            <field name="language_level_ids"/>
                        </page>
                        <page name="publications_productions_evaluations"
                              string="Publicaciones, producciones y evaluaciones">
                            <div class="float-right">
                                <field name="cv_help_publications_productions_evaluations"/>
                            </div>
                            <field name="publication_production_evaluation_ids"/>
                        </page>
                        <page name="tutoring_orientation_supervision" string="Tutorías, orientaciones, supervisiones">
                            <div class="float-right">
                                <field name="cv_help_tutoring_orientation_supervision"/>
                            </div>
                            <field name="tutoring_orientation_supervision_ids"/>
                        </page>
                        <page string="Discapacidad">
                            <div class="float-right">
                                <field name="cv_help_disability"/>
                            </div>
                            <div>
                                <field name="disabilitie_documentary_validation_state" invisible="1"/>
                                <div class="alert alert-danger" role="alert"
                                     attrs="{'invisible': [('disabilitie_documentary_validation_state', '!=', 'rejected')]}">
                                    <p class="mb-0">
                                        <strong>
                                            La sección discapacidad ha sido rechazada. Motivo del rechazo:
                                            <field name="disabilitie_documentary_reject_reason" class="oe_inline"
                                                   readonly="1"/>
                                            <p/>
                                            Fecha:
                                            <field name="disabilitie_documentary_validation_date" class="oe_inline"
                                                   readonly="1"/>
                                            Usuario:
                                            <field name="disabilitie_documentary_user_id" class="oe_inline"
                                                   options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"
                                                   readonly="1"/>
                                        </strong>
                                    </p>
                                </div>
                                <div class="alert alert-success" role="alert"
                                     attrs="{'invisible': ['|',('disabilitie_documentary_validation_state', '!=', 'validated'),('people_disabilitie', '!=', 'si')]}">
                                    <p class="mb-0">
                                        <strong>
                                            La sección discapacidad ha sido validada
                                            <p/>
                                            Fecha: <field name="disabilitie_documentary_validation_date" readonly="1" class="oe_inline"/> Usuario:
                                            <field name="disabilitie_documentary_user_id" class="oe_inline"
                                                   readonly="1"
                                                   options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                                        </strong>
                                    </p>
                                </div>
                            </div>
                            <group>
                                <group>
                                    <field name="allow_content_public" required="1"/>
                                    <field name="situation_disability"/>
                                    <field name="people_disabilitie"
                                           attrs="{'invisible': [('situation_disability', '!=', 'si')]}"/>
                                </group>
                                <group>
                                    <field name="document_certificate_filename" invisible="1"/>
                                    <field name="document_certificate_file" filename="document_certificate_filename"
                                           options="{'accepted_file_extensions': '.pdf'}"
                                           attrs="{'invisible': [('people_disabilitie', '!=', 'si')],'required': [('people_disabilitie', '=', 'si')]}"/>
                                    <field name="certificate_date"
                                           attrs="{'invisible': [('people_disabilitie', '!=', 'si')],'required': [('people_disabilitie', '=', 'si')]}"/>
                                    <field name="to_date" attrs="{'invisible': [('people_disabilitie', '!=', 'si')]}"/>
                                </group>
                            </group>
                            <group string="Tiene dificultad permanente para:"
                                   attrs="{'invisible': [('situation_disability', '!=', 'si')]}">
                                <group>
                                    <field name="see" widget="radio"/>
                                    <br/>
                                    <field name="walk" widget="radio"/>
                                    <br/>
                                    <field name="realize" widget="radio"/>
                                    <br/>
                                    <field name="interaction" widget="radio"/>
                                </group>
                                <group>
                                    <field name="hear" widget="radio"/>
                                    <br/>
                                    <field name="speak" widget="radio"/>
                                    <br/>
                                    <field name="lear" widget="radio"/>
                                </group>
                            </group>
                            <group string="Seleccione los apoyos que desea:"
                                   attrs="{'invisible': [('situation_disability', '!=', 'si')]}">
                                <group>
                                    <field name="type_support_ids_domain" invisible="1"/>
                                    <field name="type_support_ids" widget="many2many_tags"
                                           domain="[('id', 'in', type_support_ids_domain)]"/>
                                    <field name="is_need_other_support" invisible="1"/>
                                </group>
                                <group>
                                    <field name="need_other_support"
                                           attrs="{'invisible': [('is_need_other_support', '!=', True)]}"/>
                                </group>
                            </group>
                        </page>
                        <page name="participation_event"
                              string="Participación en eventos">
                            <div class="float-right">
                                <field name="cv_help_participation_event"/>
                            </div>
                            <field name="participation_event_ids"/>
                        </page>
                        <page name="other_relevant_information"
                              string="Otra información relevante">
                            <div class="float-right">
                                <field name="cv_help_other_relevant_information"/>
                            </div>
                            <field name="other_relevant_information_ids">
                                <tree editable="top">
                                    <field name="theme"/>
                                    <field name="description"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="theme"/>
                                        <field name="description"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name="reference" string="Referencias">
                            <div class="float-right">
                                <field name="cv_help_reference"/>
                            </div>
                            <field name="reference_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="kanban_digital_cv">
        <field name="name">onsc.cv.digital.kanban</field>
        <field name="model">onsc.cv.digital</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban" create="0">
                <field name="id"/>
                <field name="cv_full_name"/>
                <field name="email"/>
                <field name="cv_nro_doc"/>
                <field name="cv_emissor_country_id"/>
                <field name="avatar_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <div class="o_kanban_image_fill_left o_kanban_image_full"
                                 t-attf-style="background-image: url(#{kanban_image('onsc.cv.digital', 'avatar_128', record.id.raw_value)})"
                                 role="img"/>
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="cv_full_name"/>
                                </strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul>
                                    <li t-if="record.cv_emissor_country_id.raw_value">
                                        <t>
                                            <field name="cv_emissor_country_id"/>
                                        </t>
                                    </li>
                                    <li t-if="record.email.raw_value" class="o_text_overflow">
                                        <t>
                                            <field name="email"/>
                                        </t>
                                    </li>
                                    <li t-if="record.cv_nro_doc" class="o_text_overflow">
                                        <t>
                                            <field name="cv_nro_doc"/>
                                        </t>
                                    </li>
                                </ul>
                                <div class="o_row">
                                    <span class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

