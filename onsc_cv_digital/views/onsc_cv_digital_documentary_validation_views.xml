<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_cv_digital_documentary_validation_form" model="ir.ui.view">
        <field name="name">onsc.cv.documentary.validation.form</field>
        <field name="model">onsc.cv.documentary.validation</field>
        <field name="arch" type="xml">
            <form string="Validacion documental">
                <sheet>
                    <group>
                        <field name="validation_status" readonly="1"  attrs="{'invisible': [('validation_status', '!=', 'rechazado')]}"/>
                        <field name="reject_reason" readonly="1" attrs="{'invisible': [('validation_status', '!=', 'rechazado')]}"/>
                        <field name="validation_date" invisible="1"/>
                        <field name="validation_user_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
