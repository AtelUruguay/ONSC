<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_cv_digital_documentary_validation_form" model="ir.ui.view">
        <field name="name">onsc.cv.digital.documentary.validation.form</field>
        <field name="model">onsc.cv.digital.documentary.validation</field>
        <field name="arch" type="xml">
            <form string="Validacion Documental">
                <sheet>
                    <group>
                        <field name="document_validation_status" readonly="1"  attrs="{'invisible': [('document_validation_status', '!=', 'rechazado')]}"/>
                        <field name="reason_rejection" readonly="1" attrs="{'invisible': [('document_validation_status', '!=', 'rechazado')]}"/>
                        <field name="document_validation_date" invisible="1"/>
                        <field name="user_validation_documentary_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>