<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="onsc_cv_generic_academic_program_search" model="ir.ui.view">
        <field name="name">onsc.cv.generic.academic.program.search</field>
        <field name="model">onsc.cv.generic.academic.program</field>
        <field name="arch" type="xml">
            <search string="Programas académicos genérico">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="onsc_cv_generic_academic_program_tree" model="ir.ui.view">
        <field name="name">onsc.cv.generic.academic.program.tree</field>
        <field name="model">onsc.cv.generic.academic.program</field>
        <field name="arch" type="xml">
            <tree string="Programas académicos genérico" editable="top">
                <field name="name"/>
                <field name="code"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="onsc_cvgeneric_academic_program_form" model="ir.ui.view">
        <field name="name">onsc.cv.generic.academic.program.form</field>
        <field name="model">onsc.cv.generic.academic.program</field>
        <field name="arch" type="xml">
            <form string="Programas académicos genérico">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='onsc_cv_generic_academic_program_action' model='ir.actions.act_window'>
        <field name="name">Programas académicos genérico</field>
        <field name="res_model">onsc.cv.generic.academic.program</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva programas académicos genérico
            </p>
        </field>
    </record>
</odoo>
