<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="onsc_cv_address_wizard_form" model="ir.ui.view">
        <field name="name">onsc.cv.address.wizard.form</field>
        <field name="model">onsc.cv.address.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="country_id" string="PaÃ­s"
                               options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        <field name="cv_address_state_id" string="Departamento"
                               options="{'no_open': True, 'no_quick_create': True}"/>
                        <field name="cv_address_location_id"
                               context="{'default_country_id': country_id, 'default_state_id': cv_address_state_id}"/>
                    </group>
                    <group>
                        <field name="cv_address_street" string="Calle"/>
                        <field name="cv_address_street2" string="Entre calle"/>
                        <field name="cv_address_street3" string="Y calle"/>
                    </group>
                </group>
                <group col="6">
                    <field name="cv_address_apto"/>
                    <field name="cv_address_nro_door"/>
                    <field name="cv_address_is_cv_bis"/>
                </group>
                <group>
                    <group>
                        <field name="cv_address_zip" string="C.P"/>
                    </group>
                </group>
                <group>
                    <field name="cv_address_amplification"/>
                </group>
                <footer>
                    <button string="Guardar" name="action_address" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
