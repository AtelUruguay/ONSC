<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="onsc_cv_reject_wizard_form" model="ir.ui.view">
        <field name="name">onsc.cv.reject.wizard.form</field>
        <field name="model">onsc.cv.reject.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="is_multi" invisible="1"/>
                <group attrs="{'invisible': [('is_multi', '=', True)]}">

                    <div class="alert alert-info" role="alert">
                        <p class="mb-0">
                            <strong>Al confirmar este Asistente el registro pasará al estado Rechazado.</strong>
                        </p>
                    </div>
                </group>
                 <group attrs="{'invisible': [('is_multi', '!=', True)]}">
                 <div class="alert alert-info" role="alert" invisible="not context.get('is_multi', False)">
                    <p class="mb-0">
                        <strong>Al confirmar este Asistente los registros pasarán al estado Rechazado.</strong>
                    </p>
                </div>
                </group>

                <group>
                    <field name="reject_reason"/>
                </group>
                <footer>
                   <button string="Rechazar" name="action_reject"  attrs="{'invisible': [('is_multi', '=', True)]}" type="object" class="oe_highlight" data-hotkey="q"/>
                   <button string="Rechazar" name="action_reject_multi" attrs="{'invisible': [('is_multi', '!=', True)]}" type="object" class="oe_highlight" />
                    <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
