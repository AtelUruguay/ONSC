<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="onsc_cv_reject_wizard_form" model="ir.ui.view">
        <field name="name">onsc.cv.reject.wizard.form</field>
        <field name="model">onsc.cv.reject.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="reject_reason"/>
                    </group>
                    <group/>
                </group>
                <footer>
                    <button string="Rechazar" name="action_reject" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
