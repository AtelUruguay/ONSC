<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!--        Catálogo condicional validado Email Template-->
        <record id="email_template_validated" model="mail.template">
            <field name="name">Plantilla de validación de catálogos</field>
            <field name="model_id" ref="onsc_cv_digital.model_onsc_cv_abstract_config"/>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>

            <field name="partner_to">{{ object.create_uid.partner_id.id }}</field>
            <field name="subject">{{ object.company_id.name }} Notificación de validación {{ object.get_description_model() or 'n/a' }}
            </field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Estimado/a
                        <t t-out="object.create_uid.partner_id.name or ''"></t>

                        <br/>
                        <br/>
                        Se le notifica que ha sido validado el registro:
                        <strong t-out="object.name or ''"/>
                        <br/>
                        <br/>
                        <t t-if="user.signature">
                            <br/>
                            <t t-out="user.signature or ''">--<br/>Mitchell Admin
                            </t>
                        </t>
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.create_uid.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <!--        Catálogo condicional rechazado Email Template-->
        <record id="email_template_rejected" model="mail.template">
            <field name="name">Plantilla de rechazo de catálogos</field>
            <field name="model_id" ref="onsc_cv_digital.model_onsc_cv_abstract_config"/>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="partner_to">{{ object.create_uid.partner_id.id }}</field>
            <field name="subject">{{ object.company_id.name }} Notificación de rechazo {{ object.name or 'n/a' }}
            </field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Estimado/a
                        <t t-out="object.create_uid.partner_id.name or ''"></t>

                        <br/>
                        <br/>
                        Se le notifica que ha sido rechazado el registro:
                        <strong t-out="object.name or ''"/>
                        <br/>
                        Motivo: <t t-out="object.reject_reason or ''"></t>
                        <br/>
                        <t t-if="user.signature">
                            <br/>
                            <t t-out="user.signature or ''">--<br/>Mitchell Admin
                            </t>
                        </t>
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.create_uid.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>